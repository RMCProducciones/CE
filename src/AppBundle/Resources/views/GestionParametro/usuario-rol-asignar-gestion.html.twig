{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Usuario{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('grupoGestion') }}">Grupos</a></li>
      <li class="active">Usuario</li>
    </ul>

{% endblock %}

{% block section %}

 <div class="container">
    <h1>Asignacion Rol</h1>
    <br>
   
    <hr>
    <h3>Asignación Rol-Usuario</h3>
  </div>

  <br />
  <br />

    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>

<div class="section">
      <div class="container"> 
        <div class="row">
            <div class="col-md-6">
              <div class="btn-group">
                <a href="{{ path('usuarioGestion') }}" class="btn btn-warning">Volver</a>                             
              </div>
            </div>
        </div>
      </div>
  </div>

  <br /> 

<div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-5 well">            
            <br>       
            <hr>            

   <table class="table table-striped table-hover">
              <thead>
                <tr>
                    <th class="text-center">Rol</th>
                    <th class="text-center">Asignar Rol</th>
                </tr>
              </thead>
              <tbody>
                
              {% set consecutivo = 0 %}              

              {% for rolesAsignar in rolAsignar %}
         
        
                <tr >
                  <td class="text-center">{{rolesAsignar}}</td>
                                                       
                  <td class="text-center">

                  {% if rolesAsignar == "ROLE_PROMOTOR" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 1}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}    
                    
                  {% if rolesAsignar == "ROLE_COORDINADOR" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 2}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesAsignar == "ROLE_ADMIN" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 3}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesAsignar == "ROLE_ESPECIALISTA_ADMINISTRATIVO" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 4}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesAsignar == "ROLE_ESPECIALISTA_CONOCIMIENTO" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 5}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesAsignar == "ROLE_ESPECIALISTA_FINANCIERO" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 6}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesAsignar == "ROLE_ESPECIALISTA_EMPRESARIAL" %}                                     
                    <a href="{{ path('usuarioAsignarRol', {'idUsuario': idUsuario, 'idRol': 7}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                    </a>
                  {% endif %}
                    <br>                      
                  </td>
                </tr>
        
            {% set consecutivo = consecutivo + 1 %}

            {% endfor %}
                 
                  
        
                
              </tbody>
            </table>           
          </div>

          <div class="col-md-5 col-md-offset-1 well">            
            <table class="table table-striped table-hover" >
              <thead>           
                 <tr>
                    <th class="text-center">Rol</th>
                    <th class="text-center">Desasignar Rol</th>                 
                </tr>
        
              </thead>
              <tbody>
       {% set consecutivo = 0 %}              

              {% for rolesUser in rolUser %}
         
        
                <tr >
                  <td class="text-center">

                    {% if rolesUser != "ROLE_USER" %}
                      {{rolesUser}}
                    {% endif %}
                    </td>
                                                       
                  <td class="text-center">                                     
                    {% if rolesUser == "ROLE_PROMOTOR" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 1}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}    
                    
                  {% if rolesUser == "ROLE_COORDINADOR" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 2}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesUser == "ROLE_ADMIN" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 3}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesUser == "ROLE_ESPECIALISTA_ADMINISTRATIVO" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 4}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesUser == "ROLE_ESPECIALISTA_CONOCIMIENTO" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 5}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesUser == "ROLE_ESPECIALISTA_FINANCIERO" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 6}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}

                  {% if rolesUser == "ROLE_ESPECIALISTA_EMPRESARIAL" %}                                     
                    <a href="{{ path('usuarioEliminarRol', {'idUsuario': idUsuario, 'idRol': 7}) }}" title="Desasignar" alt="Desasignar"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    </a>
                  {% endif %}


                    <br>                      
                  </td>
                </tr>
        
            {% set consecutivo = consecutivo + 1 %}

            {% endfor %}
          
                  
                  
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
           

               
{% endblock %}

