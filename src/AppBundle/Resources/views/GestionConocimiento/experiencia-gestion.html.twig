{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Experiencias Exitosas{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Conocimientos</li>
      <li>Experiencias Exitosas</li>
      
    </ul>

{% endblock %}

	

{% block section %}
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('experienciaNuevo') }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionExperienciaExitosaCtrl">
              <thead>
                	<tr>
	                  <th>#</th>
	                                  
	                  <th>Fecha de Registro Experiencia </th>
	                  <th>Grupo </th>
	                  <th>Calificacion </th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                
              {% set consecutivo = 1 %}
	    	
	    		{% for experienciaexitosa in experienciaexitosas %}
	    		
	                
	                <tr id="filaExperienciaExitosa{{ consecutivo }}">
	                  <td>{{ consecutivo }}</td>
	                  
	                <td>
	                   {{ experienciaexitosa.fecharegistro |  date('d - m - Y') }}
	                  </td>
	                  <td>
	                    
	                  </td>
					  
					  <td>
	                  
	                  </td>
	         
	                  
	                  <td>  
                      
                     <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ experienciaexitosa.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
	            
                     <a href="{{ path('experienciaSoporte', {'idExperienciaExitosa': experienciaexitosa.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> 

                     | 

                     <a title="Editar" alt="Editar" href="{{ path('experienciaEditar', {'idExperienciaExitosa': experienciaexitosa.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarExperienciaExitosa({{experienciaexitosa.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idExperienciaExitosa = {{experienciaexitosa.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                         

                    </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for experienciaexitosa in experienciaexitosas %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ experienciaexitosa.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ experienciaexitosa.id }} | {{ experienciaexitosa.fechaRegistro |  date('d - m - Y') }}</h4>
          </div>
          <div class="modal-body">
            <b>Fecha de registro: {{ experienciaexitosa.fechaRegistro |  date('d - m - Y') }}</b>
            <br>
            <b>Numero de empleos: {{ experienciaexitosa.numeroEmpleos }}</b>
            <br>
            <b>Ventas mes: {{ experienciaexitosa.ventasMes }}</b>
            <br>
			<b>Produccion Mensual: {{ experienciaexitosa.produccionMensual }}</b>
            <br>
			<b>Fuentes de Financiacion: {{ experienciaexitosa.fuentesFinanciacion }}</b>
            <br>
            <b>Valor de recursos de la financiacion: {{ experienciaexitosa.valorRecursosFinanciacion }}</b>
            <br>            
            <b>Tipo de poblacion: {{ experienciaexitosa.tipoPoblacion }}</b>
            <br>
            <b>Proceso productivo: {{ experienciaexitosa.procesoProductivo }}</b>    
			<br>
            <b>Testimonio de poblacion: {{ experienciaexitosa.testimonioPoblacion }}</b>     
			<br>
            <b>Acciones de minimización del impacto ambiental: {{ experienciaexitosa.accionesMinimizacionImpactoAmbiental }}</b>     
			<br>
            <b>Impacto en la comunidad: {{ experienciaexitosa.impactoComunidad }}</b>     
			<br>
            <b>Innovacion: {{ experienciaexitosa.innovacion }}</b>     
			<br>
            <b>Observaciones: {{ experienciaexitosa.observaciones }}</b> 			
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

