{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Capacitacion{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Conocimientos</li>
      <li>Capacitacion</li>
      
    </ul>

{% endblock %}

	

{% block section %}

<div class="container">
    <h1>Gestión de Capacitaciones</h1>
    <hr>
  </div>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('capacitacionNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionCapacitacionCtrl">
              <thead>
                	<tr>
	                  <th>#</th>
	                 
	                  
	                  <th>Nombre Capacitacion </th>
	                  <th>Nombre Capacitador</th>
	                  <th>Tipo Capacitacion</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for capacitacion in capacitaciones %}
	    		
	                
	                <tr id="filaCapacitacion{{ consecutivo }}">
	                  <td>{{ consecutivo }}</td>
	                  
	                <td>
	                  {{ capacitacion.capacitador }}
	                  </td>
	                  <td>
	                    {{ capacitacion.nombre}}
	                  </td>
					  <td>
	                   {{ capacitacion.tipo}}
	                  </td>
	         
	                  
	                  <td>

	                   <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ capacitacion.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
                   
	                    
                     <a href="{{ path('capacitacionSoporte', {'idCapacitacion': capacitacion.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> |
              
                     <a title="Editar" alt="Editar" href="{{ path('capacitacionEditar', {'idCapacitacion': capacitacion.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |      

                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarCapacitacion({{capacitacion.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idCapacitacion = {{capacitacion.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                
                    </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for capacitacion in capacitaciones %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ capacitacion.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ capacitacion.id }} | {{ capacitacion.nombre }}</h4>
          </div>
          <div class="modal-body">
            <b>Capacitador: {{ capacitacion.capacitador }}</b>
            <br>
            <b>Nombre de la capacitacion: {{ capacitacion.nombre }}</b>
            <br>
            <b>Fecha de la publicacion: {{ capacitacion.fechaPublicacion |  date('d - m - Y') }}</b>
            <br>
            <b>Fecha de inicio de la capacitacion: {{ capacitacion.fechaInicio |  date('d - m - Y') }}</b>
            <br>
            <b>Fecha de finalizacion de la capacitacion: {{ capacitacion.fechaFinalizacion |  date('d - m - Y') }}</b>
            <br>
            <b>Tipo de capacitacion: {{ capacitacion.tipo }}</b>
            <br>
            <b>Municipio: {{ capacitacion.municipio }}</b>
            <br>
            <b>Modalidad: {{ capacitacion.modalidad }}</b>           
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
   {% endfor %}             
{% endblock %}

