{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Incentivos al Ahorro{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Incentivos al ahorro</li>
      
    </ul>

{% endblock %}

	

{% block section %}

	<div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <div class="input-group">
              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
			  <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
			
                r:[[txtBuscar]]
			  
          </div>
          <div class="col-md-3 text-center">
		  
            <div class="[[styleBuscarHerramientas]]">
              <button class="btn btn-primary" ng-click="buttonBuscarHerramientas(count)">Filtros <span class="caret"></span></button>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <a class="btn btn-default">Limpiar</a>
          </div>
        </div>
      </div>
      <br>
    </div>
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('ahorroGestion') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('ahorroNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionAhorroCtrl">
              <thead>
                	<tr>
	                  <th>#</th>
	                 
	                  
	                  <th>Fecha Registro </th>
	                  <th>Fecha Inicio</th>
	                  <th>Estado</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for ahorro in ahorros %}
	    		
	                
	                <tr id="filaAhorro{{ consecutivo }}">
	                  <td>{{ consecutivo }}</td>
	                 
	                <td>
	                  {{ ahorro.fechaRegistro |  date('d - m - Y')  }}
	                  </td>
	                  <td>
	                    {{ ahorro.fechainicio |  date('d - m - Y') }}
	                  </td>
					  <td>
	                   {{ ahorro.estado}}
	                  </td>
	         
	                  
	                  <td>

                     <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ ahorro.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
                
	                   
	                   <a href="{{ path('ahorroSoporte', {'idAhorro': ahorro.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> 

                     | 

                     <a title="Editar" alt="Editar" href="{{ path('ahorroEditar', {'idAhorro': ahorro.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarAhorro({{ahorro.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idAhorro = {{ahorro.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                     
                    </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for ahorro in ahorros %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ ahorro.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ ahorro.id }} | {{ ahorro.grupo }}</h4>
          </div>
          <div class="modal-body">
            <b>Grupo: {{ ahorro.grupo }}</b>
            <br>
            <b>Fecha de registro: {{ ahorro.fechaRegistro |  date('d - m - Y') }}</b>
            <br>
            <b>Fecha de inicio: {{ ahorro.fechaInicio |  date('d - m - Y') }}</b>
            <br>
            <b>Estado: {{ ahorro.estado }}</b>
            <br>
            <b>Incentivo ahorro colectivo: {{ ahorro.incentivoAhorroColectivo }}</b>
            <br>            
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

