{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Polizas{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Polizas</li>
      
    </ul>

{% endblock %}

	

{% block section %}

	<div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <div class="input-group">
              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
			  <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
			
                r:[[txtBuscar]]
			  
          </div>
          <div class="col-md-3 text-center">
		  
            <div class="[[styleBuscarHerramientas]]">
              <button class="btn btn-primary" ng-click="buttonBuscarHerramientas(count)">Filtros <span class="caret"></span></button>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <a class="btn btn-default">Limpiar</a>
          </div>
        </div>
      </div>
      <br>
      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="count === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
            <br>
			<select ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()" ng-options="departamento.id as departamento.nombre for departamento in JSONDepartamento"></select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
            <br>
			<select ng-model="selZona" class="form-control" ng-change="cargarMunicipios()" ng-options="zona.id as zona.nombre for zona in JSONZona"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
            <br>
			<select ng-model="selMunicipio" class="form-control" ng-options="municipio.id as municipio.nombre for municipio in JSONMunicipio"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <br>
            <input list="estado" placeholder="Estado..." class="form-control">
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>
    </div>
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('polizaNuevo') }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                	<tr>
	                  <th>#</th>
	                  <th>
	                    <input type="checkbox">
	                  </th>
	                  
	                  <th>Grupo</th>
	                  <th>Estado</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for poliza in polizas %}
	    		
	                
	                <tr>
	                  <td>{{consecutivo}}</td>
	                  <td>
	                    <input type="checkbox">
	                  </td>
	                <td>
	                {{poliza.grupo}}
	                  </td>
	                  <td>
	                    
	                  </td>
					  
	         
	                  
	                  <td>
	                   
	                    <a href="acta-subir-grupos.html" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 
					    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ poliza.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
	                    <a title="Editar" alt="Editar" href="3-grupos-editar.html"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> | 
	                    <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
	                  </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}	
	                  {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for poliza in polizas %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ poliza.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ poliza.id }} | {{ poliza.grupo }}</h4>
          </div>
          <div class="modal-body">
            <b>Departamento:{{ poliza.grupo.municipio.departamento.nombre }}</b>
            <br>
            <b>Municipio: {{ poliza.grupo.municipio }}</b>
            <br>
            <b>Zona: Oriente {{ poliza.grupo.municipio.zona.nombre }}</b>
            <br>
            <b>Tipo de grupo: {{ poliza.grupo.tipo }}</b>
            <br>
            <b>Codigo de grupo: {{ poliza.grupo.codigo }}</b>
            <br>
            <b>Nombre grupo: {{ poliza.grupo.nombre }}</b>
            <br>
            <b>Corregimiento: {{ poliza.grupo.corregimiento }}</b>
            <br>
            <b>Vereda: {{ poliza.grupo.vereda }}</b>
            <br>
            <b>Cacerio: {{ poliza.grupo.cacerio }}</b>
            <br>
            <b>Direccion:  {{ poliza.grupo.direccion }}</b>
            <br>
			<b>Barrio:  {{ poliza.grupo.barrio }}</b>
            <br>
            <b>Tipo de organización: {{ poliza.grupo.codigo }}</b>
            <br>
            <b>NIT: {{ poliza.grupo.numeroIdentificacionTributaria }}</b>
            <br>
            <b>Telefono Movil: {{ poliza.grupo.telefonoCelular }}</b>
            <br>
            <b>Telefono Fijo: {{ poliza.grupo.telefonoFijo }}</b>
            <br>
            <b>Cuenta Bancaria: {{ poliza.grupo.entidadFinancieraCuenta }}</b>
            <br>
            <b>Tipo de cuenta:  {{ poliza.grupo.tipoCuenta }}</b>
            <br>
            <b>Numero de cuenta: {{ poliza.grupo.numeroCuenta }}</b>       
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

