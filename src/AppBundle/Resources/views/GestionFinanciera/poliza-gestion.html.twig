{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Polizas{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Polizas</li>
      
    </ul>

{% endblock %}

	

{% block section %}

	<div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <div class="input-group">
              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
			  <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
			
                r:[[txtBuscar]]
			  
          </div>
          <div class="col-md-3 text-center">
		  
            <div class="[[styleBuscarHerramientas]]">
              <button class="btn btn-primary" ng-click="buttonBuscarHerramientas(count)">Filtros <span class="caret"></span></button>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <a class="btn btn-default">Limpiar</a>
          </div>
        </div>
      </div>
      <br>
      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="count === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
            <br>
			<select ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()" ng-options="departamento.id as departamento.nombre for departamento in JSONDepartamento"></select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
            <br>
			<select ng-model="selZona" class="form-control" ng-change="cargarMunicipios()" ng-options="zona.id as zona.nombre for zona in JSONZona"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
            <br>
			<select ng-model="selMunicipio" class="form-control" ng-options="municipio.id as municipio.nombre for municipio in JSONMunicipio"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <br>
            <input list="estado" placeholder="Estado..." class="form-control">
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>
    </div>
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
             <div class="btn-group">
              <a href="{{ path('polizaGestion') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('polizaNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionPolizaCtrl">
              <thead>
                	<tr>
	                  <th>#</th>  
	                  <th>Estado</th>   
                    <th>Consecutivo</th>  
                    <th>Cofinanciacion</th>            
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for poliza in polizas %}
	    		
	                
	                <tr id="filaPoliza{{ consecutivo }}">
	                  <td>{{consecutivo}}</td>
	                  
	                <td>
	                {{poliza.estado}}
	                  </td>
                    <td>
                  {{poliza.consecutivo}}
                    </td>
                    <td>
                  {{poliza.cofinanciacion}}
                    </td>
	                
					  
	         
	                  
	                  <td>
	                   
	                  
  
                     
                     <a href="{{ path('polizaSoporte', {'idPoliza': poliza.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> 

                     | 

                     <a title="Editar" alt="Editar" href="{{ path('polizaEditar', {'idPoliza': poliza.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarPoliza({{poliza.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idPoliza = {{poliza.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                     
                    </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}	
	                  {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	
{% endblock %}

