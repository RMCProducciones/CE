{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Capacitacion Financiera{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Capacitacion financiera</li>
      
    </ul>

{% endblock %}

	

{% block section %}

<div class="container">
    <h1>Gestión de Capacitaciones Financieras</h1>
    <hr>
  </div>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('programaCapacitacionFinancieraGestion') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('capacitacionFinancieraNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionCapacitacionFinancieraCtrl">
              <thead>
                	<tr >
	                  <th>#</th>
	                  <th>Modulo</th>
	                  <th>Estado</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for capacitacionFinanciera in capacitacionFinancieras %}
	    		
	                
	                <tr id="filaCapacitacionFinanciera{{ consecutivo }}">
	                  <td>{{ consecutivo }}</td>
	                 
	                <td>
	                {{capacitacionFinanciera.modulo}}
	                  </td>
	                  <td>
	                    {{capacitacionFinanciera.estado}}
	                  </td>					  	                  
	                  <td>

	                   <a href="{{ path('capacitacionFinancieraSoporte', {'idCapacitacionFinanciera': capacitacionFinanciera.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> 

                     | 

                     <a title="Editar" alt="Editar" href="{{ path('capacitacionFinancieraEditar', {'idCapacitacionFinanciera': capacitacionFinanciera.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarCapacitacionFinanciera({{capacitacionFinanciera.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idCapacitacionFinanciera = {{capacitacionFinanciera.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                     
                    </td>

	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for capacitacionFinanciera in capacitacionFinancieras %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ capacitacionFinanciera.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ capacitacionFinanciera.id }} </h4>
          </div>
          <div class="modal-body">
            <br>
            <b>Lugar: {{ capacitacionFinanciera.modulo }}</b>
            <br>
            <b>Estado: {{ capacitacionFinanciera.estado }}</b>
                        
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

