{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Programa Capacitacion Financiera{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Programa Capacitacion financiera</li>
      
    </ul>

{% endblock %}

	

{% block section %}
<div class="container">
    <h1>Gestión de Programas de Capacitacion Financiera</h1>
    <hr>
  </div>

	
    <br>
     

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('programaCapacitacionFinancieraGestion') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('programaCapacitacionFinancieraNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionProgramaCapacitacionFinancieraCtrl">
              <thead>
                	<tr >
	                  <th>#</th>
	                  <th>Lugar</th>
	                  <th>Estado</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for programaCapacitacionFinanciera in programaCapacitacionFinancieras %}
	    		
	                
	                <tr id="filaProgramaCapacitacionFinanciera{{ consecutivo }}">
	                  <td>{{ consecutivo }}</td>
	                 
	                <td>
	                {{programaCapacitacionFinanciera.lugar}}
	                  </td>
	                  <td>
	                    {{programaCapacitacionFinanciera.estado}}
	                  </td>					  	                  
	                  <td>

                     <a href="{{ path('capacitacionFinancieraGestion', {'idPCF': programaCapacitacionFinanciera.id}) }}" alt="Capacitaciones" title="Capacitaciones"><span class="glyphicon glyphicon-book" aria-hidden="true"></span></a> 

                     | 
 

	                   <a href="{{ path('programaCapacitacionFinancieraSoporte', {'idPCF': programaCapacitacionFinanciera.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> 

                     | 

                     <a title="Editar" alt="Editar" href="{{ path('programaCapacitacionFinancieraEditar', {'idPCF': programaCapacitacionFinanciera.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarProgramaCapacitacionFinanciera({{programaCapacitacionFinanciera.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idPCF = {{programaCapacitacionFinanciera.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                     
                    </td>

	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for programaCapacitacionFinanciera in programaCapacitacionFinancieras %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ programaCapacitacionFinanciera.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ programaCapacitacionFinanciera.id }} | {{ programaCapacitacionFinanciera.talentoFinanciero }}</h4>
          </div>
          <div class="modal-body">
            <b>Talento financiero: {{ programaCapacitacionFinanciera.talentoFinanciero }}</b>
            <br>
            <b>Lugar: {{ programaCapacitacionFinanciera.lugar }}</b>
            <br>
            <b>Estado: {{ programaCapacitacionFinanciera.estado }}</b>
            <br>
            <b>Municipio: {{ programaCapacitacionFinanciera.municipio }}</b>
            <br>            
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

