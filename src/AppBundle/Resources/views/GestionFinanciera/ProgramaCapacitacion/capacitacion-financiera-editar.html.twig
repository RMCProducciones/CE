{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Programa Capacitación Financiera editar{% endblock %}

{% block breadcrumb_ul %}

      <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      
      <li><a href="{{ path('programaCapacitacionFinancieraGestion') }}">Gestión Programa Capacitación Financiera</a></li>
    <li>Editar</li>
    </ul>

{% endblock %}


{% block section %}

    <div class="container">
    <h1> Gestión de Programa de Capacitación Financiera</h1>
    <hr>
    <h3> Editar Registro</h3>
    <br />
   
  </div>
     
  	<br>

    <hr>

    
  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[Guardar]" id="grupo_Guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('programaCapacitacionFinancieraGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
	  <div class="row">
			<div class="col-md-12">
				<fieldset>
					<legend>Programa de Capacitación financiera</legend>
				</fieldset>            
			</div>
	  </div>

		<br/>

		<div class="row">
				<div class="col-md-4">
                  {{ form_label(form.talento_financiero) }}
				  {{ form_errors(form.talento_financiero) }}
                  {{ form_widget(form.talento_financiero, { 'attr': {'class': 'form-control'} }) }}
                </div> 
                <div class="col-md-4">
                  {{ form_label(form.lugar) }}
				  {{ form_errors(form.lugar) }}
                  {{ form_widget(form.lugar, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.estado) }}
				  {{ form_errors(form.estado) }}
                  {{ form_widget(form.estado, { 'attr': {'class': 'form-control'} }) }}
                </div>
		</div>
		<br/>		
        <!--form class="form-horizontal" role="form"-->             
		<div class="row">
            <div class="col-md-4">
             {{ form_label(form.municipio) }}
			 {{ form_errors(form.municipio) }}
             {{ form_widget(form.municipio, { 'attr': {'class': 'form-control'} }) }}
            </div> 
        </div>
		<br/>
		<br/>	
        <!--/form-->          
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

