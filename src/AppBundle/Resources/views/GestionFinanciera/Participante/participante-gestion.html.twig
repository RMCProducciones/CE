{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Participantes{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Participantes</li>
      
    </ul>

{% endblock %}

	

{% block section %}

	<div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <div class="input-group">
              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
			  <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
			
                r:[[txtBuscar]]
			  
          </div>
          <div class="col-md-3 text-center">
		  
            <div class="[[styleBuscarHerramientas]]">
              <button class="btn btn-primary" ng-click="buttonBuscarHerramientas(count)">Filtros <span class="caret"></span></button>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <a class="btn btn-default">Limpiar</a>
          </div>
        </div>
      </div>
      <br>
      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="count === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
            <br>
			<select ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()" ng-options="departamento.id as departamento.nombre for departamento in JSONDepartamento"></select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
            <br>
			<select ng-model="selZona" class="form-control" ng-change="cargarMunicipios()" ng-options="zona.id as zona.nombre for zona in JSONZona"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
            <br>
			<select ng-model="selMunicipio" class="form-control" ng-options="municipio.id as municipio.nombre for municipio in JSONMunicipio"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <br>
            <input list="estado" placeholder="Estado..." class="form-control">
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>
    </div>
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('participanteNuevo') }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                	<tr>
	                  <th>#</th>
	                
	                  
	                  <th>Nombre</th>
					  <th>Numero Documento</th>
	                  <th>Relacion</th>
					  
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for participante in participantes %}
	    		
	                
	                <tr>
	                  <td>{{consecutivo}}</td>
	                  
	                <td>
	                {{participante.primernombre}}{{participante.segundonombre}}{{participante.primerapellido}}{{participante.segundoapellido}}
	                  </td>
	                  <td>
	                    {{participante.numerodocumento}}
	                  </td>
					   <td>
	                   {{participante.relacion}}
	         
	                  </td>
					  
	                  <td>
	                   
	                    <a href="acta-subir-grupos.html" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 
					    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ participante.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
	                    <a title="Editar" alt="Editar" href="3-grupos-editar.html"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> | 
	                    <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
	                  </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for participante in participantes %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ participante.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ participante.id }} | {{ participante.primerNombre }} {{ participante.segundoNombre }} {{ participante.primerApellido }} {{ participante.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Relacion del participante:{{ participante.relacion }}</b>
            <br>
            <b>Tipo de documento: {{ participante.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ participante.numeroDocumento }}</b>
            <br>
            <b>Primer apellido: {{ participante.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ participante.segundoApellido }}</b>
            <br>
            <b>Primer nombre: {{ participante.primerNombre }}</b>
            <br>
            <b>Segundo nombre: {{ participante.segundoNombre }}</b>
            <br>
            <b>Genero: {{ participante.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ participante.fechaNacimiento | date('d - m - Y') }}</b>
            <br>
            <b>Edad al momento de la inscripción: {{ participante.edadInscripcion }}</b>
            <br>
            <b>Pertenencia etnica: {{ participante.pertenenciaEtnica }}</b>
            <br>
            <b>Grupo indigena: {{ participante.grupoIndigena }}</b>
            <br>
            <b>Desplazado por la violencia: {{ participante.desplazado }}</b>
            <br>
            <b>Discapacidad: {{ participante.discapacidad }}</b>
            <br>
            <b>Estado civil: {{ participante.estadoCivil }}</b>
            <br>
            <b>Rol en el grupo familiar: {{ participante.rolGrupoFamiliar }}</b>
            <br>
            <b>Hijos menores de 5: {{ participante.hijosMenores5 }}</b>
            <br>
            <b>Sabe leer: {{ participante.sabeLeer }}</b>
			<br>
            <b>Sabe escribir: {{ participante.sabeEscribir }}</b>
			<br>
            <b>Nivel de estudios: {{ participante.nivelEstudios }}</b>
			<br>
            <b>Ocupacion: {{ participante.ocupacion }}</b>
			<br>
            <b>Tipo de vivienda: {{ participante.tipoVivienda }}</b>
			<br>
            <b>Telefono fijo: {{ participante.telefonoFijo }}</b>
			<br>
            <b>Telefono celular: {{ participante.telefonoCelular }}</b>
			<br>
            <b>Correo electronico: {{ participante.correoElectronico }}</b>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

