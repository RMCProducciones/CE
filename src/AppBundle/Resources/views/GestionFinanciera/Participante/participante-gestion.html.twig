{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Participantes{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Financiera</li>
      <li>Participantes</li>
      
    </ul>

{% endblock %}

	

{% block section %}
    <div class="container">
       <h1>Gestión de Participantes</h1>
       <hr>
    </div>

  
    <br>
     


    <div class="section" ng-controller="FiltrosParticipanteCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('participanteNuevo') }}" class="btn btn-success">Nuevo</a>              
            </div>
          </div>

          <div class="col-md-4">
          </div>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
              <button class="btn btn-info" ng-click="buttonBuscarHerramientasParticipante(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <button class="btn btn-primary" ng-click="limpiarCamposFiltroBusquedaParticipante();">Limpiar</button>                               
            </div>
          </div>

        </div>

      </div>

      <div class="container well" ng-show="CountBuscarHerramientas === 1">

        <form method="get" action="{{ path('participanteGestion') }}">               
                  
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

        {{ form_errors(form) }}

        <div class="row">                      

                  <div class="col-md-3">
                  
                    {{ form_label(form.numero_documento) }}
                    {{ form_errors(form.numero_documento) }}
                    {{ form_widget(form.numero_documento, { 'attr': {'class': 'form-control', 'placeholder': 'Numero Documento'} }) }}

                  </div>

                  <div class="col-md-3">

                    {{ form_label(form.primer_nombre) }}
                    {{ form_errors(form.primer_nombre) }}
                    {{ form_widget(form.primer_nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Primer Nombre '} }) }}

                  </div>

                  <div class="col-md-3">

                    {{ form_label(form.primer_apellido) }}
                    {{ form_errors(form.primer_apellido) }}
                    {{ form_widget(form.primer_apellido, { 'attr': {'class': 'form-control', 'placeholder': 'Primer Apellido'} }) }}

                  </div>
                
        </div>

        <br />        

        <div class="row">    

                  <div class="col-md-12 text-right">

                  <button class="btn btn-default" style="color:white; background-color:#ccc;"  type="submit" name="submit-filter" value="filter"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>

                  </div>                  
        </div>

        {{ form_end(form) }}

        </form>





        </div>      


    </div>



    <br>
     
    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                	<tr>
	                 <th class="text-center">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
	                 <th class="text-center">{{ knp_pagination_sortable(pagination, 'Nombre', 'a.nombre') }}</th>
					         <th class="text-center">{{ knp_pagination_sortable(pagination, 'Numero Documento', 'a.numerodocumento') }}</th>
	                 <th class="text-center">{{ knp_pagination_sortable(pagination, 'Relacion', 'a.relacion') }}</th>					  
	                 <th class="text-center">{{ knp_pagination_sortable(pagination, 'Acciones', 'a.acciones') }}</th>
	                </tr>
	           </thead>
	           <tbody>
                {% set consecutivo = 1 %}
	    	
	    		{% for article in pagination %}
	    		
	                <tr {% if loop.index is odd %}class="color"{% endif %}>
                  <tr id="filaParticipante{{ consecutivo }}">

                    <td class="text-center">{{article.id }}</td>               
                    <td class="text-center">{{article.primernombre}} {{article.segundonombre}} {{article.primerapellido}} {{article.segundoapellido}}</td>
                    <td class="text-center">{{article.numerodocumento}}</td>      
                    <td class="text-center">{{article.relacion}}</td>
	                
	                
					  
	                  <td class="text-center">	                   
	                    
					            <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ article.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
	                    <a title="Editar" alt="Editar" href="3-grupos-editar.html"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> | 
	                    <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
	                  </td>
	                </tr>
					{% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
	             
               </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination) }}
                </ul>
              </nav>
            </div>    
          </div>
        </div>
      </div>
    </div>  

	{% for participante in pagination %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ participante.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ participante.id }} | {{ participante.primerNombre }} {{ participante.segundoNombre }} {{ participante.primerApellido }} {{ participante.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Relacion del participante:{{ participante.relacion }}</b>
            <br>
            <b>Tipo de documento: {{ participante.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ participante.numeroDocumento }}</b>
            <br>
            <b>Primer apellido: {{ participante.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ participante.segundoApellido }}</b>
            <br>
            <b>Primer nombre: {{ participante.primerNombre }}</b>
            <br>
            <b>Segundo nombre: {{ participante.segundoNombre }}</b>
            <br>
            <b>Genero: {{ participante.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ participante.fechaNacimiento | date('d - m - Y') }}</b>
            <br>
            <b>Edad al momento de la inscripción: {{ participante.edadInscripcion }}</b>
            <br>
            <b>Pertenencia etnica: {{ participante.pertenenciaEtnica }}</b>
            <br>
            <b>Grupo indigena: {{ participante.grupoIndigena }}</b>
            <br>
            <b>Desplazado por la violencia: {{ participante.desplazado }}</b>
            <br>
            <b>Discapacidad: {{ participante.discapacidad }}</b>
            <br>
            <b>Estado civil: {{ participante.estadoCivil }}</b>
            <br>
            <b>Rol en el grupo familiar: {{ participante.rolGrupoFamiliar }}</b>
            <br>
            <b>Hijos menores de 5: {{ participante.hijosMenores5 }}</b>
            <br>
            <b>Sabe leer: {{ participante.sabeLeer }}</b>
			<br>
            <b>Sabe escribir: {{ participante.sabeEscribir }}</b>
			<br>
            <b>Nivel de estudios: {{ participante.nivelEstudios }}</b>
			<br>
            <b>Ocupacion: {{ participante.ocupacion }}</b>
			<br>
            <b>Tipo de vivienda: {{ participante.tipoVivienda }}</b>
			<br>
            <b>Telefono fijo: {{ participante.telefonoFijo }}</b>
			<br>
            <b>Telefono celular: {{ participante.telefonoCelular }}</b>
			<br>
            <b>Correo electronico: {{ participante.correoElectronico }}</b>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

