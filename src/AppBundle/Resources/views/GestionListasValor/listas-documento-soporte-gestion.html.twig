{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Listas de Documentos{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestion Listas de Valores de Documento Soporte</li>
    </ul>

{% endblock %}

{% block section %}   

    <div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('listasDocumentoSoporteNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-group">
              <form method="get" action="{{ path('listasDocumentoSoporteGestion') }}">
                  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

                    {{ form_errors(form) }}
                  
                    {{ form_label(form.dominio) }}
                    {{ form_errors(form.dominio) }}
                    {{ form_widget(form.dominio, { 'attr': {'class': 'form-control', 'placeholder': 'Dominio'} }) }}

                    {{ form_label(form.descripcion) }}
                    {{ form_errors(form.descripcion) }}
                    {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control', 'placeholder': 'Descripcion '} }) }}
                    <input type="submit" name="submit-filter" value="filter" />

                  {{ form_end(form) }}
                  
              </form>
                           
              <span class="input-group-btn">
                <a class="btn btn-default" href="javascript:buscar();" style="color:white; background-color:#ccc;"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
              </span>    
            </div>
          </div>

          <script>
          function buscar(){
            var valor = document.getElementById("txtBuscar").value;
            var url = document.getElementById("path").value;
            console.log(valor);
            console.log(url);
            window.location = url + "lista-documento-soporte/"+ valor + "/filtro";
          }            
          </script>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
                <button class="btn btn-info" ng-click="buttonBuscarHerramientas(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <a class="btn btn-primary" href="{{ path('listasValorGestion') }}" ng-click="limpiarCamposFiltroBusqueda();">Limpiar</a>                            
            </div>
          </div>

        </div>
      </div>

      <br />

      

    </div>

    <br />

  <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
  </div>


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionListasDocumentoSoporteCtrl">
              <thead>
                	<tr>

    
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                    <th></th>
	                  <th class="text-left">{{ knp_pagination_sortable(pagination, 'Dominio', 'a.dominio') }}</th>	                  
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th class="text-left">{{ knp_pagination_sortable(pagination, 'Descripción', 'a.descripcion') }}</th>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Acciones', 'a.acciones') }}</th>
                    <th></th>
                    <th></th>
	                </tr>
	           </thead>
	           <tbody>
          
          {% set consecutivo = 1 %}
  
            {% for article in pagination %} 
          
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                  <tr id="filaListas{{ consecutivo }}">
                    <td class="text-center">{{ article.id }}</td>
                  <td></td>
                     <td class="text-left">
                      {{ article.dominio }}
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-left">
                      {{article.descripcion}}
                    </td>  

                    <td class="text-center">

                     <a title="Editar" alt="Editar" href="{{ path('listasDocumentoSoporteEditar', {'idListas': article.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarListasDocumentoSoporte({{article.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idListas = {{article.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                     
                     </td>
                     <td></td>
                     <td></td>
                  </tr>
                  {% set consecutivo = consecutivo + 1 %} 
                  {% else %}
                  
                  <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
              </tr>
                 {% endfor %}                          
               </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination) }}
                </ul>
              </nav>
            </div>           
          </div>
        </div>
      </div>
    </div>  


    
               
{% endblock %}

