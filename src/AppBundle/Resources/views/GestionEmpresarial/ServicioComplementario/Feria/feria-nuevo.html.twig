{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Ferias nuevo{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Servicio Complementario</li>
      <li><a href="{{ path('feriaGestion') }}">Gestión Ferias</a></li>
      <li class="active">Nuevo</li>
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1> Gestión Ferias </h1>
    <hr>
    <h3> Nuevo Registro</h3>
    <br />
    <br />
  </div>
     

  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[guardar]" id="grupo_guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('feriaGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        
		
			<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Datos básicos de la Feria </legend>
					</fieldset>            
				</div>
			</div>	

<div class="row">
				
            <div class="col-md-4">
                  {{ form_label(form.tipo) }}
				          {{ form_errors(form.tipo) }}
                  {{ form_widget(form.tipo, { 'attr': {'class': 'form-control', 'placeholder': 'Tipo de Feria'} }) }}
            </div>
               
            <div class="col-md-4">
                  {{ form_label(form.fecha_propuesta) }}
				          {{ form_errors(form.fecha_propuesta) }}
                  {{ form_widget(form.fecha_propuesta, { 'attr': {'class': 'form-control', 'placeholder': 'Fecha Propuesta '} }) }}
            </div>
                
            <div class="col-md-4">
                  {{ form_label(form.municipio) }}
                  {{ form_errors(form.municipio) }}
                  {{ form_widget(form.municipio, { 'attr': {'class': 'form-control', 'placeholder': 'Municipio '} }) }}
            </div>
         
</div>
<br/>

<div class="row">
        
            <div class="col-md-4">
                  {{ form_label(form.lugar) }}
                  {{ form_errors(form.lugar) }}
                  {{ form_widget(form.lugar, { 'attr': {'class': 'form-control', 'placeholder': 'Tipo de Feria'} }) }}
            </div>
               
            <div class="col-md-4">
                  {{ form_label(form.nombre) }}
                  {{ form_errors(form.nombre) }}
                  {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre de la Feria '} }) }}
            </div>
                
            <div class="col-md-4">
                  {{ form_label(form.entidades) }}
                  {{ form_errors(form.entidades) }}
                  {{ form_widget(form.entidades, { 'attr': {'class': 'form-control', 'placeholder': 'Entidades Pertenecientes '} }) }}
            </div>
         
</div>
<br/>
<div class="row">
        
            <div class="col-md-4">
                  {{ form_label(form.presentacion) }}
                  {{ form_errors(form.presentacion) }}
                  {{ form_widget(form.presentacion, { 'attr': {'class': 'form-control', 'placeholder': 'Presentación Ferias'} }) }}
            </div>
               
            <div class="col-md-4">
                  {{ form_label(form.objetivo) }}
                  {{ form_errors(form.objetivo) }}
                  {{ form_widget(form.objetivo, { 'attr': {'class': 'form-control', 'placeholder': 'Objetivo '} }) }}
            </div>
                
            <div class="col-md-4">
                  {{ form_label(form.objetivos_especificos) }}
                  {{ form_errors(form.objetivos_especificos) }}
                  {{ form_widget(form.objetivos_especificos, { 'attr': {'class': 'form-control', 'placeholder': 'Entidades Pertenecientes '} }) }}
            </div>
         
</div>

			

			<br/>				
       
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

