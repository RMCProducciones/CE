                    <br>                    
                    <a href="#" title="Asignar" alt="Asignar" data-toggle="modal" data-target="#asignarRol{{ integrante.id }}"><span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
                    <br>                    
                  </td>
                </tr>
        
            {% set consecutivo = consecutivo + 1 %}
