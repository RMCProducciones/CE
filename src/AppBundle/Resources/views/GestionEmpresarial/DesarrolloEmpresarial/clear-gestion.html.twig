{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Clear{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li class="active">CLEAR</li>
    </ul>
{% endblock %}





{% block section %}
  <div class="container">
    <h1>Gestión CLEAR "Comité Local de Evaluación y Asignación de Recursos"</h1>
    <hr>
  </div>

  <br />

    <div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a class="btn btn-warning">Volver</a>
              <a href="{{ path('clearNuevo') }}" class="btn btn-success">Nuevo</a>              
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-group">           

              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
                <button class="btn btn-default" style="color:white; background-color:#ccc;" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>              
              </span>         

            </div>
          </div>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
                <button class="btn btn-info" ng-click="buttonBuscarHerramientas(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <button class="btn btn-primary">Limpiar</button>

            </div>
          </div>

        </div>
      </div>

      <br />

      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="CountBuscarHerramientas === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
              <select ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()" ng-options="departamento.nombre for departamento in JSONDepartamento track by departamento.id">     
             </select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
             <select ng-model="selZona" class="form-control" ng-change="cargarMunicipios()" ng-options="zona.nombre for zona in JSONZona track by zona.id"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
             <select ng-model="selMunicipio" class="form-control" ng-options="municipio.nombre for municipio in JSONMunicipio track by municipio.id"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <input list="estado" placeholder="Estado..." class="form-control" />
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>

    </div>

    
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                	<tr>
	                  <th>#</th>
	                  <th>
	                    <input type="checkbox">
	                  </th>
	                  
	                  <th>Fecha Inicio</th>
	                  <th>Fecha Finalización </th>
	                  <th>Lugar Realización</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for clear in cleares %}
	                
	                <tr>
	                  <td>{{ consecutivo }}</td>
	                  <td>
	                    <input type="checkbox">
	                  </td>
	                  <td>{{ clear.fechaInicio |  date('d - m - Y') }}</td>
	                  <td>{{ clear.fechaFinalizacion |  date('d - m - Y') }}</td>
	                  <td>
	                    <b>M</b> {{ clear.municipio }}
	                    <br>
	                    <b>D</b> {{ clear.municipio.departamento }}
	                    <br>
	                    <b>Z</b> {{ clear.municipio.zona }}
	                    <br>
	                  </td>
	                  
	                  <td>
	                    <a href="{{ path('integrantesGestion', {'idCLEAR': clear.id}) }}" alt="Integrantes CLEAR" title="Integrantes CLEAR"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a> | 
	                    <a href="#" alt="Asignacion Grupos" title="Asignacion Grupos"><span class="glyphicon glyphicon-th" aria-hidden="true"></span></a> | 
	                    <a href="acta-subir-grupos.html" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 
					    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ clear.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
	                    <a title="Editar" alt="Editar" href="{{ path('clearEditar', {'idCLEAR': clear.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> | 
	                    <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
	                  </td>
	                </tr>
	                {% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for clear in cleares %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ clear.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ clear.id }} | {{ clear.lugarRealizacionCLEAR }}</h4>
          </div>
          <div class="modal-body">
            <b>Fecha de inicio:{{ clear.fechaInicio |  date('d - m - Y') }}</b>
            <br>
            <b>Fecha de finalización: {{ clear.fechaFinalizacion |  date('d - m - Y') }}</b>
            <br>
            <b>Lugar de realización del CLEAR: {{ clear.lugarRealizacionCLEAR }}</b>
            <br>
            <b>Zona: {{ clear.municipio.zona.nombre }}</b>
            <br>
            <b>Departamento: {{ clear.municipio.departamento.nombre }}</b>
			<br>
            <b>Municipio: {{ clear.municipio }}</b>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}           
{% endblock %}

