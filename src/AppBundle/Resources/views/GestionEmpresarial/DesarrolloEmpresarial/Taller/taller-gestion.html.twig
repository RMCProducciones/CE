{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Talleres{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('grupoGestion') }}">Grupos</a></li>
      <li class="active"><a href="{{ path('seguimientoGrupo', {'idGrupo': idGrupo}) }}">Seguimiento</a></li>
      <li>Talleres</li>
    </ul>

{% endblock %}

{% block section %}   

  <div class="container">
    <h1>Gestión Talleres</h1>
    <hr>
    <br>    
       <h2>Grupo: {{ grupo.nombre }}</h2>
  </div>

  <br />
  <br />

   <div class="section" ng-controller="FiltrosTallerCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('tallerNuevo', {'idGrupo': idGrupo}) }}" class="btn btn-success">Nuevo</a>              
            </div>
          </div>

          <div class="col-md-4">
          </div>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
                <button class="btn btn-info" ng-click="buttonBuscarHerramientasTaller(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <button class="btn btn-primary" ng-click="limpiarCamposFiltroBusquedaTaller();">Limpiar</button>                            
            </div>
          </div>

        </div>
      </div>

      <br />

      <div class="container well" ng-show="CountBuscarHerramientas === 1">

        <form method="get" action="{{ path('tallerGestion', {'idGrupo': idGrupo}) }}">               
                  
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

        {{ form_errors(form) }}

        <div class="row">          

            

                  <div class="col-md-3">
                  
                    {{ form_label(form.lugar) }}
                    {{ form_errors(form.lugar) }}
                    {{ form_widget(form.lugar, { 'attr': {'class': 'form-control', 'placeholder': 'Lugar'} }) }}

                  </div>

                  <div class="col-md-3">
                  
                    {{ form_label(form.asistentes) }}
                    {{ form_errors(form.asistentes) }}
                    {{ form_widget(form.asistentes, { 'attr': {'class': 'form-control', 'placeholder': 'Numero de Asistentes'} }) }}

                  </div>

                  

        </div>

        <br />        

        <div class="row">    

                  <div class="col-md-12 text-right">

                  <button class="btn btn-default" style="color:white; background-color:#ccc;"  type="submit" name="submit-filter" value="filter"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>

                  </div>                  
        </div>

        {{ form_end(form) }}

        </form>

      </div>

    </div>

    <br />

  <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
  </div>


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionTallerCtrl">
              <thead>
                	<tr>
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                    <th class="text-left">{{ knp_pagination_sortable(pagination, 'Objetivos', 'a.Objetivo') }}</th>
                    <th class="text-left">{{ knp_pagination_sortable(pagination, 'Lugar', 'a.lugar') }}</th>
                    <th class="text-left">{{ knp_pagination_sortable(pagination, 'Numero de Asistentes', 'a.asistentes') }}</th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Acciones', 'a.acciones') }}</th>
	                </tr>
	           </thead>
	           <tbody>
          {% set consecutivo = 1 %}
        
          {% for taller in pagination  %}
                  
                  <tr id="filaTaller{{ consecutivo }}">
                    <td class="text-center">{{ consecutivo }}</td>
                  
                     <td class="text-left">
                      {{taller.objetivo}}
                    </td>
                    <td class="text-left">
                      {{taller.lugar}}
                    </td>  
                    <td class="text-left">
                      {{taller.asistentes}}
                    </td>

                    <td class="text-center">

                     <a href="{{ path('beneficiarioTaller', {'idGrupo': idGrupo, 'idTaller': taller.id}) }}" alt="Beneficiarios" title="Beneficiarios"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a> 

                     |

                     <a href="{{ path('tallerSoporte', {'idGrupo': idGrupo, 'idTaller': taller.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> 

                     | 

                     <a title="Editar" alt="Editar" href="{{ path('tallerEditar', {'idGrupo' : idGrupo,'idTaller': taller.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> 

                     |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarTaller({{idGrupo}}, {{taller.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idTaller = {{taller.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                     
                     </td>
                  </tr>
                  {% set consecutivo = consecutivo + 1 %} 
                  {% else %}
                  
                  <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
            
	    	
	    		
	                
	             
              
               </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination) }}
                </ul>
              </nav>
            </div> 
          </div>
        </div>
      </div>
    </div>  


    
               
{% endblock %}

