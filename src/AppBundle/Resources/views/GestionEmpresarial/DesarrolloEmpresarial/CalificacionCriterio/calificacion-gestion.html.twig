{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Gestion Calificación Criterio  {% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Concursos</li>
      <li class="active">Gestion Calificación Criterio </li>
    </ul>
{% endblock %}





{% block section %}
  <div class="container">
    <h1>Gestión Calificación Criterio </h1>
    <hr>
  </div>

  <br />
  <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('concursoGrupo', {'idConcurso': idConcurso}) }}" class="btn btn-warning">Volver</a>
            
            </div>

          
          </div>
        </div>
      </div>
    </div>  


    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionCriterioCtrl">
              <thead>
                	<tr>
	                  <th class="text-center">#</th>	    
                    <th></th> 
                    <th></th>     
	                  <th class="text-left">Criterio</th>
                    <th></th>
	                  <th class="text-left">Maxima Calificación</th>
                 
                    <th class="text-left">Puntaje</th>
	                                 
	                  <th class="text-center">Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for criterio in criterios %}	                
	                <tr id="filaCriterio{{ consecutivo }}">
	                  <td class="text-center">{{ consecutivo }}</td>
                    <td></td>
                     <td></td>  	
                    <td class="text-left">{{ criterio.criterio}}</td>    
                    <th></th> 
                     <td class="text-left">{{ criterio.maximopuntaje}}</td> 
                     <td class>                      
                    {% for calificacion in calificaciones %}
                      {% if calificacion != null %}
                        {% if calificacion.criterioCalificacion.id == criterio.id %}
                          {{calificacion.puntaje}}                       
                        {% endif %}
                      {% endif %}
                    {% endfor %}
                     </td>
                     <td></td> 
                     <td class="text-left">
                    <a href="{{ path('calificacionNuevo',{'idAsignacionGrupoConcurso':idAsignacionGrupoConcurso, 'idCriterio' : criterio.id}) }}" title="calificacion" alt="calificacion"> <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span></a> 

                    
                  </td>

	                </tr>
	                {% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="9" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	  
       
{% endblock %}
