{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Organizaciones editar{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Servicio Complementario</li>
      <li><a href="{{ path('organizacionGestion') }}">Gestión Organizaciones</a></li>
      <li class="active">Editar</li>
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1> Gestión Organizaciones </h1>
    <hr>
    <h3> Editar Registro</h3>
    <br />
    <br />
  </div>
     

  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[guardar]" id="grupo_guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('organizacionGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        
		
			<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Datos básicos de la organizacion </legend>
					</fieldset>            
				</div>
			</div>	

				<div class="row">
				<div class="col-md-4">
                  {{ form_label(form.nombre_organizacion) }}
				  {{ form_errors(form.nombre_organizacion) }}
                  {{ form_widget(form.nombre_organizacion, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre Organizacion'} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.linea_productiva) }}
				  {{ form_errors(form.linea_productiva) }}
                  {{ form_widget(form.linea_productiva, { 'attr': {'class': 'form-control', 'placeholder': 'Linea Productiva '} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.tipo_producto) }}
          {{ form_errors(form.tipo_producto) }}
                  {{ form_widget(form.tipo_producto, { 'attr': {'class': 'form-control', 'placeholder': 'Tipo Producto '} }) }}
                </div>      
		</div>
<br/> 
    <div class="row">
        <div class="col-md-4">
                  {{ form_label(form.fecha_inscripcion) }}
          {{ form_errors(form.fecha_inscripcion) }}
                  {{ form_widget(form.fecha_inscripcion, { 'attr': {'class': 'form-control', 'placeholder': 'Fecha Inscripción'} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.tipo_documento_contacto) }}
          {{ form_errors(form.tipo_documento_contacto) }}
                  {{ form_widget(form.tipo_documento_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Tipo Documento Contacto '} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.numero_documento_contacto) }}
          {{ form_errors(form.numero_documento_contacto) }}
                  {{ form_widget(form.numero_documento_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Numero Documento Contacto '} }) }}
                </div>      
    </div>
<br/> 
		<div class="row">
        <div class="col-md-4">
                  {{ form_label(form.primer_nombre_contacto) }}
          {{ form_errors(form.primer_nombre_contacto) }}
                  {{ form_widget(form.primer_nombre_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Primer Nombre Contacto'} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.segundo_nombre_contacto) }}
          {{ form_errors(form.segundo_nombre_contacto) }}
                  {{ form_widget(form.segundo_nombre_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Segundo Nombre Contacto '} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.primer_apellido_contacto) }}
          {{ form_errors(form.primer_apellido_contacto) }}
                  {{ form_widget(form.primer_apellido_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Primer Apellido Contacto '} }) }}
                </div>      
    </div>	
<br/> 
    <div class="row">
        <div class="col-md-4">
                  {{ form_label(form.segundo_apellido_contacto) }}
          {{ form_errors(form.segundo_apellido_contacto) }}
                  {{ form_widget(form.segundo_apellido_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Segundo Apellido Contacto'} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.telefono_fijo_contacto) }}
          {{ form_errors(form.telefono_fijo_contacto) }}
                  {{ form_widget(form.telefono_fijo_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Telefono Fijo Contacto '} }) }}
                </div>
                <div class="col-md-4">
                  {{ form_label(form.telefono_celular_contacto) }}
          {{ form_errors(form.telefono_celular_contacto) }}
                  {{ form_widget(form.telefono_celular_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Telefono Celular  Contacto '} }) }}
                </div>      
    </div>  
<br/> 
    <div ng-controller="ListasLocalizacionCtrl" ng-init="valoresInicialesLocalizacion(true, 0, 0, 0)">
      
      <div class="row">
        <div class="col-md-4">
            <label>* Departamento</label>
            <select id="selDepartamento" ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()">
            <option ng-repeat="departamento in JSONDepartamento track by departamento.id" ng-selected="[[departamento.id == idDepartamento]]" value="[[departamento.id]]">[[departamento.nombre]]</option>
          </select> 
        </div>
        <div class="col-md-4">
            <label>* Zona</label>
          <select id="selZona" ng-model="selZona" class="form-control" ng-change="cargarMunicipios()">
            <option ng-repeat="zona in JSONZona" ng-selected="[[zona.id == idZona]]" value="[[zona.id]]">[[zona.nombre]]</option>
          </select>
        </div>
          <div class="col-md-4">
             {{ form_label(form.municipio) }}
             {{ form_errors(form.municipio) }}
          <select id="selMunicipio" ng-model="selMunicipio" class="form-control" ng-change="cambiarMunicipio()">
            <option ng-repeat="municipio in JSONMunicipio" ng-selected="[[municipio.id == idMunicipio]]" value="[[municipio.id]]">[[municipio.nombre]]</option>
          </select>
             {{ form_widget(form.municipio, { 
                'attr': {
                  'class': 'form-control selMunicipio',
                'style': 'visibility:hidden'
                } }) }}
          </div>
      </div>  
      </div>  
<br/> 
      <div>
        <div class="row">
            <div class="col-md-4">
              {{ form_label(form.rural) }}<br/>
              {{ form_errors(form.rural) }}
              <switch id="swRural" name="swRural" ng-model="swRural" class="green" on="Si" off="No"></switch>
              {{ form_widget(form.rural, { 'attr': {'style':'visibility:hidden'} }) }}
            </div>
            <div class="col-md-4">
              {{ form_label(form.direccion) }}
              {{ form_errors(form.direccion) }}
              {{ form_widget(form.direccion, { 'attr': {'class': 'form-control', 'placeholder': 'Dirección'} }) }}
            </div>
            <div class="col-md-4">
              <div>
                {{ form_label(form.descripcion) }}
                {{ form_errors(form.descripcion) }}
                {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control', 'placeholder': 'descripcion'} }) }}
              </div>
             
            </div>
        </div>  

        <br/>  
      </div>  
<br/> 

      <div class="row" ng-controller="CamposRutalPasantiaOrganizacionCtrl">
        <div class="col-md-4">
                  {{ form_label(form.correo_electronico_contacto) }}
                  {{ form_errors(form.correo_electronico_contacto) }}
                  {{ form_widget(form.correo_electronico_contacto, { 'attr': {'class': 'form-control', 'placeholder': 'Correo Electronico'} }) }}
                </div>

                <div class="col-md-4">
                  {{ form_label(form.ruta) }}
                  {{ form_errors(form.ruta) }}
                  <center>
          <switch id="swRuta" name="swRuta" ng-model="swRuta"  class="green" on="Si" off="No"></switch>
                  {{ form_widget(form.ruta, { 'attr': {'style':'visibility:hidden'} }) }}
          </center> 
                </div>

                <div class="col-md-4">
                  {{ form_label(form.pasantia) }}
                  {{ form_errors(form.pasantia) }}
                  <center>
          <switch id="swPasantia" name="swPasantia" ng-model="swPasantia"  class="green" on="Si" off="No"></switch>
                  {{ form_widget(form.pasantia, { 'attr': {'style':'visibility:hidden'} }) }}
          </center> 
                </div>     
    </div>  

			<br/>		

      <div class="row">
        <div class="col-md-12">
                  {{ form_label(form.observaciones) }}
          {{ form_errors(form.observaciones) }}
                  {{ form_widget(form.observaciones, { 'attr': {'class': 'form-control', 'placeholder': 'Observaciones'} }) }}
                </div>

        
    </div>  		
       
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

