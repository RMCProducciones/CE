{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Asignacion Contador{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('grupoGestion') }}">Grupos</a></li>
      <li class="active">Asignar contador</li>
    </ul>

{% endblock %}

{% block section %}

 <div class="container">
    <h1>Gestión Grupos</h1>
    <hr>
    <h3>Asignación Contador</h3>
  </div>

  <br />
  <br />

    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>

<div class="section">
      <div class="container"> 
        <div class="row">
            <div class="col-md-6">
              <div class="btn-group">
                <a href="{{ path('grupoGestion') }}" class="btn btn-warning">Volver</a>                             
              </div>
            </div>
        </div>
      </div>
  </div>

  <br /> 

<div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-5 well">            
            <br>
            <div class="row well">
              <div class="col-md-6">
                <label>Cargo</label>
                <br>
                <input list="cargo" placeholder="Cargo..." class="form-control">
                <datalist id="cargo">
                  <option value="Funcionario"></option>
                  <option value="Promotor"></option>
                </datalist>
              </div>
              <div class="col-md-6">
                <label>Entidad</label>
                <br>
                <input list="entidad" placeholder="Entidad..." class="form-control">
                <datalist id="entidad">
                  <option value=""></option>
                </datalist>
              </div>
            </div>
            <hr>            



            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th>
                    
                  </th>
                  <th>Opcionados</th>
                  <th>Tarjeta profesional</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                
              {% set consecutivo = 1 %}              
        
            {% for contador in contadores %}
        
             <tr>
                  <td class="text-center">{{ consecutivo }}</td>
                  <td>
                  </td>
                  <td>  
                    {{ contador.primerNombre }} {{ contador.primerApellido }}                    
                  </td>                  
                  <td>                    
                    {{ contador.numeroTarjeta }}
                  </td>                                      
                  <td class="text-center">
                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ contador.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <br>                                       
                    <a href="{{ path('grupoContadorAsignacion', {'idGrupo': idGrupo, 'idContador': contador.id}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
                    <br>                      
                  </td>
                </tr>
        
            {% set consecutivo = consecutivo + 1 %}
                  {% else %}
                  
                  <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
        
                
              </tbody>
            </table>



            

            <div class="col-md-12 text-center">
              <ul class="pagination">
                <li>
                  <a href="#">Anterior</a>
                </li>
                <li>
                  <a href="#">1</a>
                </li>
                <li>
                  <a href="#">2</a>
                </li>
                <li>
                  <a href="#">3</a>
                </li>
                <li>
                  <a href="#">4</a>
                </li>
                <li>
                  <a href="#">5</a>
                </li>
                <li>
                  <a href="#">Siguiente</a>
                </li>
              </ul>
            </div>
          </div>

          <div class="col-md-6 col-md-offset-1 well">            
            <table class="table table-striped table-hover" ng-controller="gestionContadorGrupoCtrl">
              <thead>           
                <tr>
                  <th>#</th>
                  <th>
                    
                  </th>
                  <th>Asignado</th>
                  <th>Datos del Beneficiario</th>
                  <th>Acciones</th>
                </tr>
        
              </thead>
              <tbody>
        {% set consecutivo = 1 %}
        
          {% for asignacionContadorGrupo in asignacionesContadorGrupo %}
                <tr id="filaIntegranteCLEAR{{ consecutivo }}">
                  <td>{{ consecutivo }}</td>
                  <td>
                    
                  </td>                 
                  <td>
                    {{ asignacionContadorGrupo.contador.primerNombre }} {{ asignacionContadorGrupo.contador.primerApellido }}
                  </td>
                  <td>
                    {{ asignacionContadorGrupo.contador.numeroTarjeta }}                    
                  </td> 
          
                  <td>
                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ asignacionContadorGrupo.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
                    <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarContadorGrupo('{{ path('grupoContadorEliminar', {'idGrupo': idGrupo, 'idAsignacionContador': asignacionContadorGrupo.id}) }}')" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a>
                  </td>
                </tr>
        
         {% set consecutivo = consecutivo + 1 %}
                  {% else %}
          <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  {% for contador in contadores %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ contador.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ contador.numeroDocumento }} | {{ contador.primerNombre }} {{ contador.segundoNombre }} {{ contador.primerApellido }} {{ contador.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Tipo de documento:{{ contador.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ contador.numeroDocumento }}</b>            
            <br>
            <b>Numero de documento: {{ contador.numeroTarjeta }}</b> 
            <br>
            <b>Primer apellido: {{ contador.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ contador.segundoApellido }}</b>
            <br>
            <b>Primer Nombre: {{ contador.primerNombre }}</b>
            <br>
            <b>Segundo Nombre: {{ contador.segundoNombre }}</b>
            <br>
            <b>Genero: {{ contador.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ contador.fechaNacimiento |  date('d - m - Y') }}</b>
            <br>
            <b>Telefono fijo: {{ contador.telefonoFijo }}</b>
            <br>
            <b>Telefono celular: {{ contador.telefonoCelular }}</b>
            <br>
            <b>Correo electronico: {{ contador.correoElectronico }}</b>
            <br>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
   {% endfor %}             

   {% for asignacionContadorGrupo in asignacionesContadorGrupo %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ asignacionContadorGrupo.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ asignacionContadorGrupo.contador.numeroDocumento }} | {{ asignacionContadorGrupo.contador.primerNombre }} {{ asignacionContadorGrupo.contador.segundoNombre }} {{ asignacionContadorGrupo.contador.primerApellido }} {{ asignacionContadorGrupo.contador.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Tipo de documento:{{ asignacionContadorGrupo.contador.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ asignacionContadorGrupo.contador.numeroDocumento }}</b>            
            <br>
            <b>Numero de documento: {{ asignacionContadorGrupo.contador.numeroTarjeta }}</b> 
            <br>
            <b>Primer apellido: {{ asignacionContadorGrupo.contador.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ asignacionContadorGrupo.contador.segundoApellido }}</b>
            <br>
            <b>Primer Nombre: {{ asignacionContadorGrupo.contador.primerNombre }}</b>
            <br>
            <b>Segundo Nombre: {{ asignacionContadorGrupo.contador.segundoNombre }}</b>
            <br>
            <b>Genero: {{ asignacionContadorGrupo.contador.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ asignacionContadorGrupo.contador.fechaNacimiento |  date('d - m - Y') }}</b>
            <br>
            <b>Telefono fijo: {{ asignacionContadorGrupo.contador.telefonoFijo }}</b>
            <br>
            <b>Telefono celular: {{ asignacionContadorGrupo.contador.telefonoCelular }}</b>
            <br>
            <b>Correo electronico: {{ asignacionContadorGrupo.contador.correoElectronico }}</b>
            <br>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
   {% endfor %}             

               
{% endblock %}

