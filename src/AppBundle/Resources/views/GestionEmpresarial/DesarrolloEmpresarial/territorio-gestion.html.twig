{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Territorio de aprendizaje{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Parametrizacion</li>
      <li>Territorios de aprendizaje </li>
      
    </ul>

{% endblock %}

{% block section %}

  <div class="container">
    <h1>Gestión Territorios de aprendizaje</h1>
    <hr>
  </div>

  <br />
  <br />

    <div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('territorioaprendizajeNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-group">           

              <input class="form-control" id="txtBuscar" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
                <button class="btn btn-default" style="color:white; background-color:#ccc;" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>              
              </span>         

            </div>
          </div>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
                <button class="btn btn-info" ng-click="buttonBuscarHerramientas(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <button class="btn btn-primary" ng-click="limpiarCamposFiltroBusqueda();">Limpiar</button>                            
            </div>
          </div>

        </div>
      </div>

      <br />

      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="CountBuscarHerramientas === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
              <select ng-model="selDepartamento" class="form-control" id="selDepartamento" ng-change="cargarZonas()" ng-options="departamento.nombre for departamento in JSONDepartamento track by departamento.id">     
             </select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
             <select ng-model="selZona" class="form-control" id="selZona" ng-change="cargarMunicipios()" ng-options="zona.nombre for zona in JSONZona track by zona.id"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
             <select ng-model="selMunicipio" class="form-control" id="selMunicipio" ng-options="municipio.nombre for municipio in JSONMunicipio track by municipio.id"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <input list="estado" id="lstEstado" placeholder="Estado..." class="form-control" />
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>

    </div>

    <br />

  <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
  </div>


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionTerritorioAprendizajeCtrl">
              <thead>
                	<tr>
	                  <th class="text-center">#</th>
	                  <th class="text-left">Nombre Territorio Aprendizaje</th>
	                  <th class="text-left">Observaciones</th>
	                  <th class="text-center">Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
          
            {% set consecutivo = 1 %}
        
          {% for territorio in territorios %}
                  
                  <tr id="filaTerritorioAprendizaje{{ consecutivo }}">
                    <td class="text-center">{{ consecutivo }}</td>
                     <td class="text-left">
                      {{territorio.nombreTerritorio}}
                     </td>
                     <td class="text-left">
                      {{territorio.observaciones}}
                    </td>
                         
                    <td class="text-center">

                     <a href="{{ path('territorioAprendizajeOrganizacion', {'idTerritorioAprendizaje': territorio.id}) }}" alt="Asignacion Organizaciones" title="Asignacion Organizaciones"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span></a> |  

                     <a title="Editar" alt="Editar" href="{{ path('territorioaprendizajeEditar', {'idTerritorioAprendizaje': territorio.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |  
                    
                     <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarTerritorioAprendizaje({{territorio.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idTerritorioAprendizaje = {{territorio.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

                      
                    
                    </td>

                  </tr>

                  {% set consecutivo = consecutivo + 1 %} 
                  {% else %}
                  
                  <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}

               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  


{% for territorio in territorios %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ territorio.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ territorio.id }} | {{ territorio.nombreterritorio }}</h4>
          </div>
          <div class="modal-body">
            


          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    {% endfor %}

{% endblock %}