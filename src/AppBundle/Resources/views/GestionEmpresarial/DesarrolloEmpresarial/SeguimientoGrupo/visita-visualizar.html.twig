{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Visita{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Parametrizacion</li>
      <li>Territorios de Aprendizaje</li>
      <li><a href="{{ path('rutaGestion') }}">Visita</a></li>
      
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1>Visitas</h1>
    <hr>
    <h3> Visualizar Visita</h3>
    <br />
    <br />
  </div>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <a href="#" class="btn btn-success">Editar</a>
              
              <a href="{{ path('seguimientoGrupo' , {'idGrupo':idGrupo}) }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        
		
			<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Datos básicos de la Visita</legend>
					</fieldset>            
				</div>
			</div>	

<div class="row">
	<div class="col-md-4">

          <b>Fecha de la Visita:</b>
          <br />
          {{visita.fecha |  date('d - m - Y') }}

  </div>
                
  <div class="col-md-4">

          <b>Objetivo de la Visita:</b>
          <br />
          {{visita.objetivo}}
          
  </div>
  <div class="col-md-4">

          <b>Agenda de la Visita:</b>
          <br />
          {{visita.agenda}}

  </div>         
</div>
<br>

<div class="row">
  <div class="col-md-4">

          <b>Lugar de la Visita:</b>
          <br />
          {{visita.lugar}}

  </div>
                
  <div class="col-md-4">

          <b>Numero asistentes de la Visita:</b>
          <br />
          {{visita.asistentes}}

  </div>
           
</div>

</br>
</br>

<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Comite de Compras</legend>
          </fieldset>            
        </div>
      </div>

<div class="row">
  <div class="col-md-4">                                  
          </br>
          {% if visita.comiteCompras == 1 %}        
              <center><img width="20px" src="{{ asset('public/images/visto-bueno-verde.png') }}"></center>
            {% else %}
              <center><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></center>
          {% endif %} 
                 
  </div>
  <div class="col-md-4">

          {% if visita.comiteCompras == 1 %}  
            <b>Funcionamiento Comite de compras:</b>
            <br />
            {{visita.funcionamientoComiteCompras}}
          {% endif %}
          
  </div>
  <div class="col-md-4">

          {% if visita.comiteCompras == 1 %}  
            <b>Logros Compras:</b>
            <br />
            {{visita.logrosCompras}}
          {% endif %}

  </div>
</div>

</br>
  
  <div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Comite Vamos Bien</legend>
          </fieldset>            
        </div>
      </div>
<div class="row">
  {% set estadoComiteVamosBien = "" %}            
  <div class="col-md-4">
          </br>
          {% if visita.comiteVamosBien == 1 %}        
              <center><img width="20px" src="{{ asset('public/images/visto-bueno-verde.png') }}"></center>
              {% set estadoComiteVamosBien = "enabled" %}
            {% else %}
              <center><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></center>
              {% set estadoComiteVamosBien = "'disabled'" %}
          {% endif %}                             
  </div>  
  <div class="col-md-4">

          {% if visita.comiteVamosBien == 1 %}  
            <b>Funcionamiento Comite vamos bien:</b>
            <br />
            {{visita.funcionamientoComiteVamosBien}}
          {% endif %}

  </div>  
  <div class="col-md-4">

          {% if visita.comiteVamosBien == 1 %}  
            <b>Logros comite vamos bien:</b>
            <br />
            {{visita.logrosVamosBien}}
          {% endif %}
          
  </div> 
</div>  

</br>    

<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Contador</legend>
          </fieldset>            
        </div>
      </div>

<div class="row">
  {% set estadoContador = "" %} 
  <div class="col-md-4">
          </br>
          {% if visita.contador == 1 %}
            <center><img width="20px" src="{{ asset('public/images/visto-bueno-verde.png') }}"></center>
            {% set estadoContador = "enabled" %}
          {% else %}
            <center><img class="text-center" width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></center>
            {% set estadoContador = "disabled" %}
          {% endif %}                        
  </div> 
  <div class="col-md-4">

          {% if visita.contador == 1 %}  
            <b>Desempeño Contador:</b>
            <br />
            {{visita.desempenoContador}}
          {% endif %}
          
  </div> 
  <div class="col-md-4">

          {% if visita.contador == 1 %}  
            <b>Observaciones Contador:</b>
            <br />
            {{visita.observacionesContador}}
          {% endif %}

  </div>

</div>

</br>

<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Presupuesto</legend>
          </fieldset>            
        </div>
      </div>

<div class="row">
    <div class="col-md-4">

          <b>Cambios Presupuesto:</b>
          <br />
          {% if visita.cambiosPresupuestoAsignado == 1 %}
            <center><img width="20px" src="{{ asset('public/images/visto-bueno-verde.png') }}"></center>            
          {% else %}
            <center><img class="text-center" width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></center>            
          {% endif %}                        

  </div>
<div class="col-md-4">
  <div>

          {% if visita.cambiosPresupuestoAsignado == 1 %}  
            <b>Observaciones Presupuesto Asignado:</b>
            <br />
            {{visita.observacionesPresupuestoAsignado}}
          {% endif %}

  </div>
  </div>  
    <div class="col-md-4">
      <div ng-show="swCambiosPresupuestoAsignado === true">

          {% if visita.cambiosPresupuestoAsignado == 1 %}  
            <b>Cambios Presupuesto Asignado:</b>
            <br />
            {{visita.cambiosRazonesPresupuestoAsignado}}
          {% endif %}

      </div>
  </div>       
</div>
<br>
<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Desempeños</legend>
          </fieldset>            
        </div>
      </div>
<div class="row">
  <div class="col-md-4">

          <b>Desempeño Organizacional:</b>
          <br />
          {{visita.desempenoOrganizacional}}

  </div>    
  <div class="col-md-4">

          <b>Desempeño Productivo:</b>
          <br />
          {{visita.desempenoProductivo}}

  </div>  
   <div class="col-md-4">

          <b>Desempeño Comercial:</b>
          <br />
          {{visita.desempenoComercial}}

  </div>
</div>
 <br>
<div class="row">
  <div class="col-md-4">

          <b>Desempeño Administrativo:</b>
          <br />
          {{visita.desempenoAdministrativo}}

  </div> 
    <div class="col-md-4">

          <b>Desempeño Financiero:</b>
          <br />
          {{visita.desempenoFinanciero}}

  </div>   
</div>
<br>
<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Cambio de Integrantes</legend>
          </fieldset>            
        </div>
      </div>


<div class="row" ng-controller="CampoCambioIntegranteCtrl">
             
  <div class="col-md-4">
          
          <b>Cambios Integrante Grupo:</b>
          <br />
          {% if visita.cambiosIntegrantesGrupo == 1 %}
            <center><img width="20px" src="{{ asset('public/images/visto-bueno-verde.png') }}"></center>            
          {% else %}
            <center><img class="text-center" width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></center>            
          {% endif %}  
  </div>
  <div class="col-md-4">
    <div ng-show="swCambiosIntegrantesGrupo === true">

          {% if visita.cambiosIntegrantesGrupo == 1 %}  
            <b>Razones cambio Integrantes:</b>
            <br />
            {{visita.cambiosRazonesIntegrantesGrupo}}
          {% endif %}

    </div>
  </div>         
</div>
<br>
<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Interventoria</legend>
          </fieldset>            
        </div>
      </div>


<div class="row" ng-controller="CampoInterventoriaCtrl">
{% set dato = 0 %}             
 <div class="col-md-4">

          </br>
          <b>Interventoria:</b>
          <br />
          {% if visita.interventoria == 1 %}
            <center><img width="20px" src="{{ asset('public/images/visto-bueno-verde.png') }}"></center>            
          {% else %}
            <center><img class="text-center" width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></center>            
          {% endif %}  

  </div>
   <div class="col-md-4">
    <div ng-show="swInterventoria === true">

          {% if visita.interventoria == 1 %}  
            <b>Razones Interventoria:</b>
            <br />
            {{visita.razonesInterventoria}}
          {% endif %}

    </div>
  </div>      
</div>

<br />

<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Finalizacón de la Visita</legend>
          </fieldset>            
        </div>
      </div>

<div class="row">
  <div class="col-md-4">
    
          <b>Observaciones:</b>
          <br />
          {{visita.observaciones}}

  </div>
                
  <div class="col-md-4">

          <b>Compromisos:</b>
          <br />
          {{visita.compromisos}}

  </div>
</div>
<br>
    </div>
             
{% endblock %}

