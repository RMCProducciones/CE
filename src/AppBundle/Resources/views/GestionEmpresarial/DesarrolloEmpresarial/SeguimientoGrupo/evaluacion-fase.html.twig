{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Evaluación Fases{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('grupoGestion') }}">Grupos</a></li>
      <li><a href="{{ path('seguimientoGrupo', {'idGrupo': grupo.id}) }}">Seguimiento</a></li>
      <li class="active">Evaluación de Fase</li>
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1> Evaluacion Fase</h1>
    <hr>
    <br />
    <br />
  </div>
     

  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[guardar]" id="grupo_guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="#" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section" ng-controller="CamposEvaluacionFaseCtrl">
      <div class="container">
        
		
			<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Evaluacion de Fases</legend>
					</fieldset>            
				</div>
			</div>	

			<br/>				
       
      </div>
    </div>

      <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-bordered" ng-controller="gestionBeneficiariosCtrl">
                <thead>
                  <tr class="bg-primary">
                    <th class="text-center">Requisitos de asignación</th>
                    <th class="text-center">IEA <br />No Formal</th>
                    <th class="text-center">PI <br />No Formal</th>
                    <th class="text-center">PN <br />Formal</th>
                </tr>
            </thead>
            <tbody>

              <tr>
                    <th colspan="6" class="text-center bg-primary">Requisitos de la fase</th>
                </tr>

                <tr class="active text-muted">
                  <td>Calificación</td>
                  <td class="text-center"><input class="form-control"></input></td>
                  <td class="text-center"><input class="form-control"></input></td>
                  <td class="text-center"><input class="form-control"></input></td>
                </tr>

                <tr class="active text-muted">
                    <td>
                    Formato de evaluación
                    </td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                </tr>

                <tr class="active text-muted">
                    <td>
                    Certificación aportes de contrapartida
                    </td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                </tr>

                <tr class="active text-muted">
                    <td>
                    Contrato de adhesión
                    </td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                </tr>

                <tr class="active text-muted">
                    <td>
                    Póliza de cumplimiento
                    </td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                    <td class="text-center"><img width="20px" src="{{ asset('public/images/visto-bueno-gris.png') }}"></td>
                </tr>

           </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

