{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Ventas{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Seguimiento</li>
      <li><a href="{{ path('ventasGestion') }}">Ventas</a></li>
      <li class="active">Nuevo</li>
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1> Gestion Ventas</h1>
    <hr>
    <h3> Nuevo Registro</h3>
    <br />
    <br />
  </div>
     

  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[guardar]" id="grupo_guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('ventasGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        
		
			<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Datos básicos Ventas</legend>
					</fieldset>            
				</div>
			</div>	

<div class="row">
				
            <div class="col-md-4">
                  {{ form_label(form.periodicidad) }}
				          {{ form_errors(form.periodicidad) }}
                  {{ form_widget(form.periodicidad, { 'attr': {'class': 'form-control', 'placeholder': 'periodicidad'} }) }}
            </div>
               
            <div class="col-md-4">
                  {{ form_label(form.producto) }}
				          {{ form_errors(form.producto) }}
                  {{ form_widget(form.producto, { 'attr': {'class': 'form-control', 'placeholder': 'Producto'} }) }}
            </div>
                
            <div class="col-md-4">
                  {{ form_label(form.unidad_medida) }}
                  {{ form_errors(form.unidad_medida) }}
                  {{ form_widget(form.unidad_medida, { 'attr': {'class': 'form-control', 'placeholder': 'Unidad de Medida'} }) }}
            </div>
         
</div>
<br/>

<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Datos y valores iniciales</legend>
          </fieldset>            
        </div>
</div>

<div class="row">
        
            <div class="col-md-3">
                  {{ form_label(form.valor_unitario_inicial) }}
                  {{ form_errors(form.valor_unitario_inicial) }}
                  {{ form_widget(form.valor_unitario_inicial, { 'attr': {'class': 'form-control', 'placeholder': 'Valor Unitario Inicial'} }) }}
            </div>
               
            <div class="col-md-3">
                  {{ form_label(form.cantidad_vendida_inicial) }}
                  {{ form_errors(form.cantidad_vendida_inicial) }}
                  {{ form_widget(form.cantidad_vendida_inicial, { 'attr': {'class': 'form-control', 'placeholder': 'Cantidad Vendida Inicial'} }) }}
            </div>

            <div class="col-md-3">
                  {{ form_label(form.valor_ventas_inicial) }}
                  {{ form_errors(form.valor_ventas_inicial) }}
                  {{ form_widget(form.valor_ventas_inicial, { 'attr': {'class': 'form-control', 'placeholder': 'Valor ventas Inicial'} }) }}
            </div>

            <div class="col-md-3">
                  {{ form_label(form.cantidad_consumo_inicial) }}
                  {{ form_errors(form.cantidad_consumo_inicial) }}
                  {{ form_widget(form.cantidad_consumo_inicial, { 'attr': {'class': 'form-control', 'placeholder': 'Cantidad Consumo Inicial'} }) }}
            </div>
</div>
<br/>

<div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Datos y valores Finales</legend>
          </fieldset>            
        </div>
</div>
                                 
<div class="row">
        
            <div class="col-md-3">
                  {{ form_label(form.valor_unitario_final) }}
                  {{ form_errors(form.valor_unitario_final) }}
                  {{ form_widget(form.valor_unitario_final, { 'attr': {'class': 'form-control', 'placeholder': 'Valor unitario Final'} }) }}
            </div>
               
           <div class="col-md-3">
                  {{ form_label(form.cantidad_vendida_final) }}
                  {{ form_errors(form.cantidad_vendida_final) }}
                  {{ form_widget(form.cantidad_vendida_final, { 'attr': {'class': 'form-control', 'placeholder': 'Cantidad vendida Final'} }) }}
           </div>
            <div class="col-md-3">
                  {{ form_label(form.valor_ventas_final) }}
                  {{ form_errors(form.valor_ventas_final) }}
                  {{ form_widget(form.valor_ventas_final, { 'attr': {'class': 'form-control', 'placeholder': 'Valor ventas Final'} }) }}
           </div>
            <div class="col-md-3">
                  {{ form_label(form.cantidad_consumo_final) }}
                  {{ form_errors(form.cantidad_consumo_final) }}
                  {{ form_widget(form.cantidad_consumo_final, { 'attr': {'class': 'form-control', 'placeholder': 'Cantidad consumo Final'} }) }}
           </div>
         
</div>

			

			<br/>				
       
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

