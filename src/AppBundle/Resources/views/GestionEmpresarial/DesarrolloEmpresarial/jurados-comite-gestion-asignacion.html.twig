{% for integrantesComites in integrantesComite %}
    <!-- Modal -->
  <div class="modal fade" id="myModal{{ integrantesComites.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ integrantesComites.id }} | {{ integrantesComites.primerNombre }} {{ integrantesComites.segundoNombre }} {{ integrantesComites.primerApellido }} {{ integrantesComites.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Tipo de documento:{{ integrantesComites.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ integrantesComites.numeroDocumento }}</b>
            <br>
            <b>Primer apellido: {{ integrantesComites.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ integrantesComites.segundoApellido }}</b>
            <br>
            <b>Primer nombre: {{ integrantesComites.primerNombre }}</b>
            <br>
            <b>Segundo nombre: {{ integrantesComites.segundoNombre }}</b>
            <br>
            <b>Genero: {{ integrantesComites.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ integrantesComites.fechaNacimiento |  date('d - m - Y') }}</b>
            <br>
            <b>Entidad: {{ integrantesComites.entidad }}</b>
            <br>
            <b>Cargo: {{ integrantesComites.cargo }}</b>
            <br>
            <b>Municipio:  {{ integrantesComites.municipio }}</b>
            <br>
            <b>Dirección:  {{ integrantesComites.direccion }}</b>
            <br>
            <b>Telefono fijo: {{ integrantesComites.telefonoFijo }}</b>
            <br>
            <b>Telefono celular: {{ integrantesComites.telefonoCelular }}</b>
            <br>
            <b>Correo electrónico: {{ integrantesComites.correoElectronico }}</b>
            <br>
            <b>Nivel de estudios: {{ integrantesComites.nivelEstudios }}</b>
            <br>
            <b>Pertenencia étnica: {{ integrantesComites.pertenenciaEtnica }}</b>        
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
{% endfor %}      
      

