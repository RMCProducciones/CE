{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Grupos{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('gruposGestion') }}">Grupos</a></li>
      <li class="active">Documentos Soporte</li>
    </ul>

{% endblock %}


{% block section %}
  	<br>
    <hr>
    
  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupoSoporte[Guardar]" id="grupoSoporte_Guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('gruposGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
              
              <div class="form-group">
                <div class="col-sm-2">
                  {{ form_label(form.tipoSoporte) }}
                </div>
				
                <div class="col-sm-10">
                  {{ form_errors(form.tipoSoporte) }}
                  {{ form_widget(form.tipoSoporte) }}
                </div>
              </div>
			  
              <div class="form-group">
                <div class="col-sm-2">
                  {{ form_label(form.file) }}
                </div>
				
                <div class="col-sm-10">
                  {{ form_errors(form.file) }}
                  {{ form_widget(form.file) }}
                </div>
              </div>

          </div>
        </div>
      </div>
    </div>
	


  {{ form_end(form) }}
  
  
  {% for soportesActivos in historialSoportesActivos %}
	{{ soportesActivos.path }}
	<br />
  {% endfor %}
               
{% endblock %}

