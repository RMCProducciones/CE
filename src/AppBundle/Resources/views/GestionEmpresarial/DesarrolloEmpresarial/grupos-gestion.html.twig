{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Grupos{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li class="active">Grupos</li>
    </ul>

{% endblock %}

	

{% block section %}

<div class="section  ng-scope" ng-app="aplicationCE" ng-controller="buttonBuscarHerramientas">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <div class="input-group">
              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
			  <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
			
                r:[[txtBuscar]]
			  
          </div>
          <div class="col-md-3 text-center">
		  
            <div class="[[styleBuscarHerramientas]]">
              <button class="btn btn-primary" ng-click="buttonBuscarHerramientas(count)"> Buscar herramientas <span class="caret"></span></button>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <a class="btn btn-default">Limpiar</a>
          </div>
        </div>
      </div>
      <br>
      <div class="container well" ng-show="count === 1">
        <div class="row">
          <div class="col-md-3">
            <label>Departamento</label>
            <br>
            <input list="departamento" placeholder="Departamento..." class="form-control">
            <datalist id="departamento">
              <option value="Antioquia"></option>
              <option value="Amazonas"></option>
              <option value="Bolívar"></option>
              <option value="Caquetá"></option>
              <option value="Cundinamarca"></option>
            </datalist>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
            <br>
            <input list="municipio" placeholder="Municipio..." class="form-control">
            <datalist id="municipio">
              <option value="Abrego"></option>
              <option value="Corinto"></option>
              <option value="Tambo"></option>
              <option value="Granada"></option>
              <option value="López"></option>
            </datalist>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
            <br>
            <input list="zona" placeholder="Zona..." class="form-control">
            <datalist id="zona">
              <option value="Nudo de Paramillo"></option>
              <option value="Cauca Costa Pacífica"></option>
              <option value="Cauca Andino"></option>
              <option value="Nariño Costa Pacífica"></option>
              <option value="Nariño Andino"></option>
            </datalist>
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <br>
            <input list="estado" placeholder="Estado..." class="form-control">
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>
    </div>
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('gruposNuevo') }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <thead>
                	<tr>
	                  <th>#</th>
	                  <th>
	                    <input type="checkbox">
	                  </th>
	                  <th>Código</th>
	                  <th>Grupo</th>
	                  <th>Localización</th>
	                  <th>Estado</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for grupo in grupos %}
	                
	                <tr>
	                  <td>1</td>
	                  <td>
	                    <input type="checkbox">
	                  </td>
	                  <td>{{ grupo.codigo }}</td>
	                  <td>{{ grupo.nombre }}</td>
	                  <td>
	                    <b>M</b>Valdivia
	                    <br>
	                    <b>D</b>Antioquia
	                    <br>
