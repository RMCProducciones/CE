{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Grupos{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li class="active">Grupos</li>
    </ul>

{% endblock %}

{% block section %}

	<div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <div class="input-group">
              <input class="form-control" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
			  <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
          </div>
		  
          <div class="col-md-3 text-center">
		  
            <div class="[[styleBuscarHerramientas]]">
              <button class="btn btn-primary" ng-click="buttonBuscarHerramientas(CountBuscarHerramientas)">Fitros <span class="caret"></span></button>
            </div>
          </div>
          <div class="col-md-2 text-center">
            <a class="btn btn-default">Limpiar</a>
          </div>
        </div>
      </div>
      <br>
      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="CountBuscarHerramientas === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
            <br>
			<select ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()" ng-options="departamento.nombre for departamento in JSONDepartamento track by departamento.id">
			
			</select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
            <br>
			<select ng-model="selZona" class="form-control" ng-change="cargarMunicipios()" ng-options="zona.nombre for zona in JSONZona track by zona.id"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
            <br>
			<select ng-model="selMunicipio" class="form-control" ng-options="municipio.nombre for municipio in JSONMunicipio track by municipio.id"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <br>
            <input list="estado" placeholder="Estado..." class="form-control">
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>
    </div>
    <br>
     
  	<br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('gruposNuevo') }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
	
    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                	<tr>
	                  <th>#</th>
	                  <th>
	                    <input type="checkbox">
	                  </th>
	                  <th>Código</th>
	                  <th>Grupo</th>
	                  <th>Localización</th>
	                  <th>Estado</th>
	                  <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for grupo in grupos %}
	                
	                <tr>
	                  <td>{{ consecutivo }}</td>
	                  <td>
	                    <input type="checkbox">
	                  </td>
	                  <td>{{ grupo.codigo }}</td>
	                  <td>{{ grupo.nombre }}</td>
	                  <td>
	                    <b>M</b> {{ grupo.municipio }}
	                    <br>
	                    <b>D</b> {{ grupo.municipio.departamento }}
	                    <br>
	                    <b>Z</b> {{ grupo.municipio.zona }}
	                    <br>
	                  </td>
	                  <td>Habilitado</td>
	                  <td>
	                    <a href="{{ path('beneficiariosGestion', {'idGrupo': grupo.id}) }}" alt="Beneficiarios" title="Beneficiarios"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a> | 
	                    
                      <a href="{{ path('gruposSoporte', {'idGrupo': grupo.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 
	                    
                      <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ grupo.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> |
	                    
                      <a title="Editar" alt="Editar" href="3-grupos-editar.html"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
	                    
                      <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
	                  </td>
	                </tr>
	                {% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  


    {% for grupo in grupos %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ grupo.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ grupo.codigo }} | {{ grupo.nombre }}</h4>
          </div>
          <div class="modal-body">
            <b>Departamento:{{ grupo.municipio.departamento.nombre }}</b>
            <br>
            <b>Municipio: {{ grupo.municipio }}</b>
            <br>
            <b>Zona: Oriente {{ grupo.municipio.zona.nombre }}</b>
            <br>
            <b>Tipo de grupo: {{ grupo.tipo }}</b>
            <br>
            <b>Codigo de grupo: {{ grupo.codigo }}</b>
            <br>
            <b>Nombre grupo: {{ grupo.nombre }}</b>
            <br>
            <b>Corregimiento: {{ grupo.corregimiento }}</b>
            <br>
            <b>Vereda: {{ grupo.vereda }}</b>
            <br>
            <b>Cacerio: {{ grupo.cacerio }}</b>
            <br>
            <b>Direccion:  {{ grupo.direccion }}</b>
            <br>
			<b>Barrio:  {{ grupo.barrio }}</b>
            <br>
            <b>Tipo de organización: {{ grupo.codigo }}</b>
            <br>
            <b>NIT: {{ grupo.codigo }}</b>
            <br>
            <b>Telefono Movil: {{ grupo.telefonoCelular }}</b>
            <br>
            <b>Telefono Fijo: {{ grupo.telefonoFijo }}</b>
            <br>
            <b>Cuenta Bancaria: {{ grupo.entidadFinancieraCuenta }}</b>
            <br>
            <b>Tipo de cuenta:  {{ grupo.tipoCuenta }}</b>
            <br>
            <b>Numero de cuenta: {{ grupo.entidadFinancieraCuenta }}</b>
            <br>
            <b>Banco: {{ grupo.entidadFinancieraCuenta}}</b>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
     {% endfor %}
               
{% endblock %}

