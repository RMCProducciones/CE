{% endblock %}

{% block section %}

 <div class="container">
    <h1>Gestión Rutas</h1>
    <hr>
    <h3>Asignación Grupos</h3>
  </div>

  <br />
  <br />

    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>

<div class="section">
      <div class="container"> 
        <div class="row">
            <div class="col-md-6">
              <div class="btn-group">
                <a href="{{ path('rutaGestion') }}" class="btn btn-warning">Volver</a>                             
              </div>
            </div>
        </div>
      </div>
  </div>

  <br /> 

	<div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-5 well">            
            <br>
            
            <hr>            
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                    <th class="text-center">{{ knp_pagination_sortable(pagination1, 'Id', 'a.id') }}</th>
                    <th></th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination1, 'Grupos', 'a.grupos') }}</th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination1, 'Acciones', 'a.acciones') }}</th>
                </tr>                
              </thead>
              <tbody>
                
         {% set consecutivo = 1 %}
        
          {% for grupo in pagination1 %}
        
        <tr {% if loop.index is odd %}class="color"{% endif %}>
                  <td class="text-center">{{ grupo.id }}</td>
                  <td>

                  </td>
                  <td>
                    {{ grupo.codigo }}
                    <br />
                    {{ grupo.nombre }}
                    <br />
                    <b>M</b> {{ grupo.municipio }}
                    <br>
                    <b>D</b> {{ grupo.municipio.departamento }}
                    <br>
                    <b>Z</b> {{ grupo.municipio.zona }}                                
          <br>
          <br>

                    
                  <td>
                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ grupo.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <br>                    
                    <a href="{{ path('rutaAsignarGrupo', {'idRuta': idRuta, 'idGrupo': grupo.id}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
                    <br>                    
                  </td>
                </tr>
        
            {% set consecutivo = consecutivo + 1 %}
                  {% else %}
          <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
        
                
              </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination1) }}
                </ul>
              </nav>
            </div>
          </div>

          <div class="col-md-6 col-md-offset-1 well">            
            <table class="table table-striped table-hover" ng-controller="gestionGrupoRutaCtrl">
              <thead>           
                <tr>
                  <th>#</th>
                  <th>
                    
                  </th>
                  <th>Grupo</th>
                  <th>Localización</th>
                  <th>Acciones</th>
                </tr>
        
              </thead>
              <tbody>
        {% set consecutivo = 1 %}
        
          {% for asignacionGrupoRuta in asignacionesGrupoRuta %}
                <tr id="filaIntegranteCLEAR{{ consecutivo }}">
                  <td>{{ consecutivo }}</td>
                  <td>
                    
                  </td>
                  <td>
                    {{ asignacionGrupoRuta.codigo }}
                    <br />
                    {{ asignacionGrupoRuta.nombre }}
                    <br />
                  </td>
                  <td>
                    <b>M</b> {{ asignacionGrupoRuta.municipio }}
                    <br>
                    <b>D</b> {{ asignacionGrupoRuta.municipio.departamento }}
                    <br>
                    <b>Z</b> {{ asignacionGrupoRuta.municipio.zona }}    
                  </td>
          
                  <td class="text-center">
                    <a href="{{ path('rutaGrupoBeneficiario', {'idRuta': idRuta, 'idGrupo': asignacionGrupoRuta.id}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>
                    <br />
                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ asignacionGrupoRuta.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
                    <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarGrupoRuta('{{ path('rutaEliminarGrupo', {'idRuta': idRuta, 'idGrupo': asignacionGrupoRuta.id}) }}')" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a>                                   
                  </td>
                </tr>
        
         {% set consecutivo = consecutivo + 1 %}
