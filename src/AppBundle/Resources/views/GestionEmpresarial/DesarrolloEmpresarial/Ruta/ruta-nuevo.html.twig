{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Rutas{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Servicio Complementario</li>
      <li><a href="{{ path('rutaGestion') }}">Rutas</a></li>
      <li class="active">Nuevo</li>
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1> Gestión Rutas </h1>
    <hr>
    <h3> Nuevo Registro</h3>
    <br />
    <br />
  </div>
     

  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[guardar]" id="grupo_guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('rutaGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        
		
			<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Datos básicos de la ruta </legend>
					</fieldset>            
				</div>
			</div>	

				<div class="row">
				<div class="col-md-6">
                  {{ form_label(form.nombreRuta) }}
				  {{ form_errors(form.nombreRuta) }}
                  {{ form_widget(form.nombreRuta, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre ruta'} }) }}
                </div>
                <div class="col-md-6">
                  {{ form_label(form.observaciones) }}
				  {{ form_errors(form.observaciones) }}
                  {{ form_widget(form.observaciones, { 'attr': {'class': 'form-control', 'placeholder': 'Observaciones '} }) }}
                </div>
          
		</div>

			

			<br/>				
       
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

