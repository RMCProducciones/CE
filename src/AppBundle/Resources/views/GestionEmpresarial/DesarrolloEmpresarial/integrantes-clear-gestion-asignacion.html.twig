{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Integrantes CLEAR{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
	   <li><a href="{{ path('CLEARGestion') }}">CLEAR</a></li>
      <li class="active">Integrantes</li>
    </ul>

{% endblock %}

{% block section %}

 <div class="container">
    <h1>Gestión CLEAR</h1>
    <hr>
    <h3>Asignación Integrantes</h3>
  </div>

  <br />
  <br />

<div class="section">
      <div class="container"> 
        <div class="row">
            <div class="col-md-6">
              <div class="btn-group">
                <a href="{{ path('CLEARGestion') }}" class="btn btn-warning">Volver</a>                             
              </div>
            </div>
        </div>
      </div>
  </div>

  <br /> 

	<div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-5 well">            
            <br>
            <div class="row well">
              <div class="col-md-6">
                <label>Cargo</label>
                <br>
                <input list="cargo" placeholder="Cargo..." class="form-control">
                <datalist id="cargo">
                  <option value="Funcionario"></option>
                  <option value="Promotor"></option>
                </datalist>
              </div>
              <div class="col-md-6">
                <label>Entidad</label>
                <br>
                <input list="entidad" placeholder="Entidad..." class="form-control">
                <datalist id="entidad">
                  <option value=""></option>
                </datalist>
              </div>
            </div>
            <hr>            
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th>
                    
                  </th>
                  <th>Opcionado</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                
         {% set consecutivo = 1 %}
        
          {% for integrante in integrantes %}
        
        <tr>
                  <td class="text-center">{{ consecutivo }}</td>
                  <td>
                    
                  </td>
                  <td>
            <br>{{integrante.primernombre}} {{integrante.segundonombre}} {{integrante.primerapellido}} {{integrante.segundoapellido}}
            <br>{{integrante.entidad}}
            <br>{{integrante.cargo}}
          <br>{{integrante.tipodocumento}}
          <br>{{integrante.numerodocumento}}

                    
                  <td>
                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ integrante.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <br>                    
                    <a href="{{ path('clearAsignarIntegrante', {'idCLEAR': idCLEAR, 'idIntegrante': integrante.id}) }}" title="Asignar" alt="Asignar"> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
                    <br>                    
                  </td>
                </tr>
        
            {% set consecutivo = consecutivo + 1 %}
                  {% else %}
          <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
        
                
              </tbody>
            </table>
            <div class="col-md-12 text-center">
              <ul class="pagination">
                <li>
                  <a href="#">Anterior</a>
                </li>
                <li>
                  <a href="#">1</a>
                </li>
                <li>
                  <a href="#">2</a>
                </li>
                <li>
                  <a href="#">3</a>
                </li>
                <li>
                  <a href="#">4</a>
                </li>
                <li>
                  <a href="#">5</a>
                </li>
                <li>
                  <a href="#">Siguiente</a>
                </li>
              </ul>
            </div>
          </div>

          <div class="col-md-6 col-md-offset-1 well">            
            <table class="table table-striped table-hover">
              <thead>           
                <tr>
                  <th>#</th>
                  <th>
                    
                  </th>
                  <th>Integrante del Comite</th>
                  <th>Rol (Comité)</th>
                  <th>Acciones</th>
                </tr>
        
              </thead>
              <tbody>
        {% set consecutivo = 1 %}
        
          {% for asignacionIntegranteCLEAR in asignacionesIntegranteCLEAR %}
                <tr>
                  <td>{{ consecutivo }}</td>
                  <td>
                    
                  </td>
                  <td>{{asignacionIntegranteCLEAR.integrante.primernombre}} {{asignacionIntegranteCLEAR.integrante.segundonombre}}</td>
                  <td>{{asignacionIntegranteCLEAR.integrante.cargo}}</td>
          
                  <td>
                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ asignacionIntegranteCLEAR.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> | 
                    <a href="#" title="Editar" alt="Editar"></a>
                    <a href="#" title="¿Eliminar registro?" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger"><span class="glyphicon glyphicon-remove-circle"></span></a>
                  </td>
                </tr>
        
         {% set consecutivo = consecutivo + 1 %}
                  {% else %}
          <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  {% for integrante in integrantes %}
    <!-- Modal -->
  <div class="modal fade" id="myModal{{ integrante.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ integrante.id }} | {{ integrante.primerNombre }} {{ integrante.segundoNombre }} {{ integrante.primerApellido }} {{ integrante.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Tipo de documento:{{ integrante.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ integrante.numeroDocumento }}</b>
            <br>
            <b>Primer apellido: {{ integrante.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ integrante.segundoApellido }}</b>
            <br>
            <b>Primer nombre: {{ integrante.primerNombre }}</b>
            <br>
            <b>Segundo nombre: {{ integrante.segundoNombre }}</b>
            <br>
            <b>Genero: {{ integrante.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ integrante.fechaNacimiento |  date('d - m - Y') }}</b>
            <br>
            <b>Entidad: {{ integrante.entidad }}</b>
            <br>
            <b>Cargo: {{ integrante.cargo }}</b>            
            <br>
            <b>Dirección:  {{ integrante.direccion }}</b>
            <br>
            <b>Telefono fijo: {{ integrante.telefonoFijo }}</b>
            <br>
            <b>Telefono celular: {{ integrante.telefonoCelular }}</b>
            <br>
            <b>Correo electrónico: {{ integrante.correoElectronico }}</b>
            <br>
            <b>Nivel de estudios: {{ integrante.nivelEstudios }}</b>
            <br>
            <b>Pertenencia étnica: {{ integrante.pertenenciaEtnica }}</b>        
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
{% endfor %}      
               
{% endblock %}

