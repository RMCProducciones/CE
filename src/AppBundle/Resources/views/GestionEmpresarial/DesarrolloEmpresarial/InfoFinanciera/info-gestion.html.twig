{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Gestion Informacion Financiera {% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Grupo</li>
      <li class="active">Informacion Financiera</li>
    </ul>
{% endblock %}





{% block section %}
  <div class="container">
    <h1>Visualización Informacion Financiera</h1>
    <hr>
  </div>

  <br />
  <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('grupoGestion', {'idGrupo': idGrupo}) }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('infoEditar', {'idGrupo': idGrupo}) }}" class="btn btn-success">Editar</a>
            </div>

          
          </div>
        </div>
      </div>
    </div>  


    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionInfoCtrl">
              <thead>
                	<tr>
	                  	    
      
                    <th></th>     
	                  <th class="text-left">Entidad Financiera</th>
                    <th></th>
	                  <th class="text-left">Tipo de Cuenta</th>
                    <th></th>
                    <th class="text-left">Numero de Cuenta</th>
	                                 
	            
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for info in info %}
	                
	      
	                  
                       
                    <th></th>              
	                  <td class="text-left">{{ info.entidadfinancieracuenta}}</td>
                    <th></th>
	                  <td class="text-left">{{ info.tipocuenta}}</td>
                    <th></th>
                    <td>{{ info.numerocuenta}}</td>

	                </tr>
	                {% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="9" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

       
{% endblock %}
