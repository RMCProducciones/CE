{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Gestion Informacion Financiera {% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gesti贸n Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('grupoGestion', {'idGrupo': idGrupo}) }}">Gesti贸n Grupos</a></li>
      <li class="active">Informaci贸n Financiera</li>
    </ul>
{% endblock %}





{% block section %}
  <div class="container">
    <h1>Visualizaci贸n Informacion Financiera</h1>
    <hr>
  </div>

  <br />
  <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('grupoGestion', {'idGrupo': idGrupo}) }}" class="btn btn-warning">Volver</a>
              {% if tipoUsuario == 1 or tipoUsuario == 3 %}
                <a href="{{ path('infoEditar', {'idGrupo': idGrupo}) }}" class="btn btn-success">Editar</a>
              {% endif %}
            </div>

          
          </div>
        </div>
      </div>
    </div>  


    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionInfoCtrl">
              <thead>
                	<tr>
	                  	    
      
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Entidad Financiera', 'a.entidadfinancieracuenta') }}</th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Tipo de Cuenta', 'a.tipocuenta') }}</th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Numero de Cuenta', 'a.numerocuenta') }}</th>
	                                 
	            
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for article in pagination %}
	                
	      
	                  
                      <tr {% if loop.index is odd %}class="color"{% endif %}>
                  

                    <td class="text-center">{{article.entidadfinancieracuenta }}</td>
                    <td class="text-center">{{article.tipocuenta}}</td>      
                    <td class="text-center">{{article.numerocuenta}}</td>

	                </tr>
	                {% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="9" class="article">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination) }}
                </ul>
              </nav>
            </div>    
          </div>
        </div>
      </div>
    </div>  

       
{% endblock %}
