{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Grupos{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li class="active">Grupos</li>
    </ul>

{% endblock %}

{% block section %}

  <div class="container">
    <h1>Gestión Grupos</h1>
    <hr>
  </div>

  <br />
  <br />

    <div class="section" ng-controller="FiltrosCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('grupoNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-group">           

              <input class="form-control" id="txtBuscar" placeholder="Buscar..." ng-model="txtBuscar" type="text">
              <span class="input-group-btn">
                <button class="btn btn-default" style="color:white; background-color:#ccc;" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>              
              </span>         

            </div>
          </div>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
                <button class="btn btn-info" ng-click="buttonBuscarHerramientas(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <button class="btn btn-primary" ng-click="limpiarCamposFiltroBusqueda();">Limpiar</button>                            
            </div>
          </div>

        </div>
      </div>

      <br />

      <div class="container well" ng-controller="ListasLocalizacionCtrl" ng-show="CountBuscarHerramientas === 1">
        <div class="row" >
          <div class="col-md-3">
            <label>Departamento</label>
              <select ng-model="selDepartamento" class="form-control" id="selDepartamento" ng-change="cargarZonas()" ng-options="departamento.nombre for departamento in JSONDepartamento track by departamento.id">     
             </select>
          </div>
          <div class="col-md-3">
            <label>Zona</label>
             <select ng-model="selZona" class="form-control" id="selZona" ng-change="cargarMunicipios()" ng-options="zona.nombre for zona in JSONZona track by zona.id"></select>
          </div>
          <div class="col-md-3">
            <label>Municipio</label>
             <select ng-model="selMunicipio" class="form-control" id="selMunicipio" ng-options="municipio.nombre for municipio in JSONMunicipio track by municipio.id"></select>           
          </div>
          <div class="col-md-3">
            <label>Estado</label>
            <input list="estado" id="lstEstado" placeholder="Estado..." class="form-control" />
            <datalist id="estado">
              <option value="Activo"></option>
              <option value="Inactivo"></option>
            </datalist>
          </div>
        </div>
      </div>

    </div>

    <br />

  <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
  </div>


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionGrupoCtrl">
              <thead>
                	<tr>
	                  <th class="text-center">#</th>
	                  <th class="text-center">Código</th>
	                  <th class="text-left">Grupo</th>
	                  <th class="text-left">Localización</th>
	                 
	                  <th class="text-center">Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for grupo in grupos %}
	                
	                <tr id="filaGrupo{{ consecutivo }}">
	                  <td class="text-center">{{ consecutivo }}</td>
	                  <td class="text-center">{{ grupo.codigo }}</td>
	                  <td class="text-left">{{ grupo.nombre }}</td>
	                  <td class="text-left">
	                    <b>M</b> {{ grupo.municipio }}
	                    <br>
	                    <b>D</b> {{ grupo.municipio.departamento }}
	                    <br>
	                    <b>Z</b> {{ grupo.municipio.zona }}
	                    <br>
	                  </td>
	                 
	                  <td class="text-center">
                      
	                    <a href="{{ path('beneficiarioGestion', {'idGrupo': grupo.id}) }}" alt="Beneficiarios" title="Beneficiarios"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a> | 

                      <a href="{{ path('grupoContador', {'idGrupo': grupo.id}) }}" alt="Asignar Contador" title="Asignar Contador"><span class="glyphicon glyphicon-usd" aria-hidden="true"></span></a> | 

                      <a href="{{ path('grupoBeneficiarioCVB', {'idGrupo': grupo.id}) }}" alt="Comite Vamos Bien" title="Comite Vamos Bien"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></a> |

                      <a href="{{ path('grupoBeneficiarioOrganizacional', {'idGrupo': grupo.id}) }}" alt="Organizacional" title="Organizacional"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span></a> | 

                      <a href="{{ path('grupoBeneficiarioComiteCompras', {'idGrupo': grupo.id}) }}" alt="Comite Compras" title="Comite Compras"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></a> 

                      <br />
	                    
                      <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ grupo.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> |	                    

                      <a href="{{ path('grupoSoporte', {'idGrupo': grupo.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 
{#                      
                       <a href="{{ path('seguimientoGrupo', {'idGrupo': grupo.id}) }}" alt="Seguimiento" title="Seguimiento"><span class="glyphicon glyphicon-random" aria-hidden="true"></span></a> 
#}

                      <br />                   

                      <a title="Editar" alt="Editar" href="{{ path('grupoEditar', {'idGrupo': grupo.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |                      
                      
                      <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarGrupo({{grupo.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idGrupo = {{grupo.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
	                 
                    </td>
	                </tr>
	                {% set consecutivo = consecutivo + 1 %}
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  


    {% for grupo in grupos %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ grupo.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ grupo.codigo }} | {{ grupo.nombre }}</h4>
          </div>
          <div class="modal-body">
            <b>Departamento:{{ grupo.municipio.departamento.nombre }}</b>
            <br>
            <b>Municipio: {{ grupo.municipio }}</b>
            <br>
            <b>Zona: Oriente {{ grupo.municipio.zona.nombre }}</b>
            <br>
            <b>Tipo de grupo: {{ grupo.tipo }}</b>
            <br>
            <b>Codigo de grupo: {{ grupo.codigo }}</b>
            <br>
            <b>Nombre grupo: {{ grupo.nombre }}</b>
            <br>
            <b>Corregimiento: {{ grupo.corregimiento }}</b>
            <br>
            <b>Vereda: {{ grupo.vereda }}</b>
            <br>
            <b>Cacerio: {{ grupo.cacerio }}</b>
            <br>
            <b>Direccion:  {{ grupo.direccion }}</b>
            <br>
			<b>Barrio:  {{ grupo.barrio }}</b>
            <br>
            <b>Tipo de organización: {{ grupo.codigo }}</b>
            <br>
            <b>NIT: {{ grupo.numeroIdentificacionTributaria }}</b>
            <br>
            <b>Telefono Movil: {{ grupo.telefonoCelular }}</b>
            <br>
            <b>Telefono Fijo: {{ grupo.telefonoFijo }}</b>
            <br>
            <b>Cuenta Bancaria: {{ grupo.entidadFinancieraCuenta }}</b>
            <br>
            <b>Tipo de cuenta:  {{ grupo.tipoCuenta }}</b>
            <br>
            <b>Numero de cuenta: {{ grupo.numeroCuenta }}</b>            
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
     {% endfor %}
               
{% endblock %}

