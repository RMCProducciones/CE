{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}CLEAR nuevo{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('CLEARGestion') }}">CLEAR</a></li>
      <li class="active">Nuevo</li>
    </ul>

{% endblock %}


{% block section %}

     
  	<br>

    <hr>

    
  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[Guardar]" id="grupo_Guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('gruposGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <!--form class="form-horizontal" role="form"-->
			
			  <div class="form-group">
                <div class="col-sm-3">
                  {{ form_label(form.fecha_inicio) }}
                </div>
                <div class="col-sm-9">
                  {{ form_errors(form.fecha_inicio) }}
                  {{ form_widget(form.fecha_inicio, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>
			  <div class="form-group">
                <div class="col-sm-3">
                  {{ form_label(form.fecha_finalizacion) }}
                </div>
                <div class="col-sm-9">
                  {{ form_errors(form.fecha_finalizacion) }}
                  {{ form_widget(form.fecha_finalizacion, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>
			   <div class="form-group">
                <div class="col-sm-3">
                  {{ form_label(form.lugar_realizacion_CLEAR) }}
                </div>
                <div class="col-sm-9">
                  {{ form_errors(form.lugar_realizacion_CLEAR) }}
                  {{ form_widget(form.lugar_realizacion_CLEAR, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>
			  <div class="form-group">
                <div class="col-sm-3">
                  {{ form_label(form.zona) }}
                </div>
                <div class="col-sm-9">
                  {{ form_errors(form.zona) }}
                  {{ form_widget(form.zona, { 'attr': {'class': 'form-control', 'onchange': 'alert("Ejecutar ajax para actualizar municipios...")'} }) }}
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-3">
                  {{ form_label(form.departamento) }}
                </div>
                <div class="col-sm-9">
                  {{ form_errors(form.departamento) }}
                  {{ form_widget(form.departamento, { 'attr': {'class': 'form-control', 'onchange': 'alert("Ejecutar ajax para actualizar municipios...")'} }) }}
                </div>
              </div>
			  
              <div class="form-group">
                <div class="col-sm-3">
                  {{ form_label(form.municipio) }}
                </div>
                <div class="col-sm-9">
                  {{ form_errors(form.municipio) }}
                  {{ form_widget(form.municipio, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>
             

            <!--/form-->
          </div>
        </div>
      </div>
    </div>

  {{ form_end(form) }}
               
{% endblock %}

