{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Actividades nuevo{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Concursos de Mejoramiento</li>
      <li>Gestión de Concursos</li>
      <li> <a href="{{ path('actividadGestion') }}">Gestión de Actividades</a></li>
      <li class="active">Actividad Nuevo</li>

    </ul>

{% endblock %}


{% block section %}

     <div class="container">
    <h1> Gestión de Actividades</h1>
    <hr>
    <h3> Nuevo Registro</h3>   
  </div>

  <br />
  <br />

    
  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
  
              <button name="grupo[Guardar]" id="grupo_Guardar" type="submit" class="btn btn-success">Guardar</button>
              
              <a href="{{ path('actividadGestion') }}" class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
        


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <!--form class="form-horizontal" role="form"-->
   <div class="row">

            <div class="col-md-4">
          {{ form_label(form.actividad) }}
          {{ form_errors(form.actividad) }}
          {{ form_widget(form.actividad, { 'attr': {'class': 'form-control'} }) }}               
           </div> 

           <div class="col-md-4">
          {{ form_label(form.mejoras) }}
          {{ form_errors(form.mejoras) }}
          {{ form_widget(form.mejoras, { 'attr': {'class': 'form-control'} }) }}               
           </div>

            <div class="col-md-4">
          {{ form_label(form.recursos) }}
          {{ form_errors(form.recursos) }}
          {{ form_widget(form.recursos, { 'attr': {'class': 'form-control'} }) }}               
           </div>
           
    </div> 

    <div class="row">

           <div class="col-md-4">
          {{ form_label(form.duracion) }}
          {{ form_errors(form.duracion) }}
          {{ form_widget(form.duracion, { 'attr': {'class': 'form-control'} }) }}               
           </div> 
           <div class="col-md-4">
          {{ form_label(form.semana_inicio) }}
          {{ form_errors(form.semana_inicio) }}
          {{ form_widget(form.semana_inicio, { 'attr': {'class': 'form-control'} }) }}               
           </div>
            <div class="col-md-4">
          {{ form_label(form.semana_finalizacion) }}
          {{ form_errors(form.semana_finalizacion) }}
          {{ form_widget(form.semana_finalizacion, { 'attr': {'class': 'form-control'} }) }}               
           </div>
           
    </div> 
			
    <br>

            <!--/form-->
          </div>
        </div>
      </div>
    </div>
     <br>

  {{ form_end(form) }}
               
{% endblock %}

