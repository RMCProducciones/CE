{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Beneficiarios{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formación de capital social asociativo y desarrollo empresarial</li>
