{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Beneficiarios{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li><a href="{{ path('grupoGestion', {'idGrupo': idGrupo}) }}">Grupos</a></li>
      <li class="active">Beneficiarios</li>
    </ul>

{% endblock %}


{% block section %}


<div class="container">
    <h1>Gestión Grupos - Beneficiarios </h1>
    <br>
    {% for grupos in grupo %}
    <h2> Grupo: {{ grupos.nombre }}</h2>
    {% endfor %}
    <hr>
  </div>
   
 
  	<br>

                <form method="get" action="{{ path('beneficiarioGestion', {'idGrupo': idGrupo}) }}">
                  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

                    {{ form_errors(form) }}
                  
                    {{ form_label(form.numero_documento) }}
                    {{ form_errors(form.numero_documento) }}
                    {{ form_widget(form.numero_documento, { 'attr': {'class': 'form-control', 'placeholder': 'Número de documento'} }) }}

                    {{ form_label(form.primer_apellido) }}
                    {{ form_errors(form.primer_apellido) }}
                    {{ form_widget(form.primer_apellido, { 'attr': {'class': 'form-control', 'placeholder': 'Primer apellido'} }) }}

                    {{ form_label(form.primer_nombre) }}
                    {{ form_errors(form.primer_nombre) }}
                    {{ form_widget(form.primer_nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Primer nombre'} }) }}

                    {{ form_label(form.genero) }}
                    {{ form_errors(form.genero) }}
                    {{ form_widget(form.genero, { 'attr': {'class': 'form-control', 'placeholder': 'Género'} }) }}
                    
                    <input type="submit" name="submit-filter" value="filter" />

                  {{ form_end(form) }}
                  
                </form>


    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('grupoGestion') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('beneficiarioNuevo', {'idGrupo': idGrupo}) }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>
    <div class="section">
      <div class="container">        
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionBeneficiariosCtrl">
              <thead>
                	<tr>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
					          <th class="text-center">{{ knp_pagination_sortable(pagination, 'Documento', 'a.numeroDocumento') }}</th>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Nombre', 'a.nombre') }}</th>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Rol Familiar', 'a.rolGrupoFamiliar') }}</th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Acciones', 'a.acciones') }}</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for article in pagination %}
	                <tr {% if loop.index is odd %}class="color"{% endif %}>
                  <tr id="filaBeneficiario{{ consecutivo }}">

                    <td class="text-center">{{article.id }}</td>               
                    <td class="text-center">{{article.numeroDocumento }}</td>
                    <td class="text-center">{{ article.primernombre}} {{ article.segundonombre}} {{ article.primerapellido}}</td>      
                    <td class="text-center">{{article.rolGrupoFamiliar}}</td>

	                  <td class="text-center">


	                    <a href="{{ path('beneficiarioSoporte', {'idGrupo': article.grupo.id, 'idBeneficiario': article.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 

	                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ article.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> |

	                    <a title="Editar" alt="Editar" href="{{ path('beneficiarioEditar',{'idGrupo': article.grupo.id, 'idBeneficiario': article.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>| 

	                   <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarBeneficiario({{article.id}},{{article.grupo.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idBeneficiario = {{article.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
	                  
                    </td>
	                </tr>
					
	                {% set consecutivo = consecutivo + 1 %}

	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination) }}
                </ul>
              </nav>
            </div>   
          </div>
        </div>
      </div>
    </div>  

	{% for beneficiario in beneficiarios %}
    <!-- Modal -->
    <div class="modal fade" id="myModal{{ beneficiario.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ beneficiario.grupo.id }} | {{ beneficiario.grupo.nombre }}</h4>
          </div>
          <div class="modal-body">
            <b>Tipo de Documento:{{ beneficiario.tipoDocumento }}</b>
            <br>
            <b>Numero de Documento: {{ beneficiario.numeroDocumento }}</b>
            <br>
            <b>Primero Apellido: {{ beneficiario.primerApellido }}</b>
            <br>
            <b>Segundo Apellido: {{ beneficiario.segundoApellido }}</b>
            <br>
            <b>Primero Nombre: {{ beneficiario.primerNombre }}</b>
            <br>
            <b>Segundo Nombre: {{ beneficiario.segundoNombre }}</b>
            <br>
            <b>Genero: {{ beneficiario.genero }}</b>
            <br>
            <b>Fecha de Nacimiento: {{ beneficiario.fechaNacimiento |  date('d - m - Y') }}</b>
            <br>
            <b>Edad al momento de la inscripcion: {{ beneficiario.edadInscripcion }}</b>
            <br>
            <b>Deplazado por la violencia: {{ beneficiario.desplazado }}</b>
            <br>            
            <b>Pertenencia Etnica: {{ beneficiario.pertenenciaEtnica }}</b>
            <br>
            <b>Grupo indigena: {{ beneficiario.grupoIndigena }}</b>
            <br>
            <b>Pertenece a la red unidos: {{ beneficiario.redUnidos }}</b>
            <br>
            <b>Sabe leer: {{ beneficiario.sabeLeer }}</b>
            <br>
            <b>Sabe escribir: {{ beneficiario.sabeEscribir }}</b>
            <br>
			       <b>Puntaje del sisben: {{ beneficiario.puntajeSisben }}</b>
            <br>
            <b>Corte sisben: {{ beneficiario.corteSisben }}</b>
            <br>
            <b>Discapacidad: {{ beneficiario.discapacidad }}</b>
			      <br>
            <b>Rol grupo familiar: {{ beneficiario.rolGrupoFamiliar }}</b>
			      <br>
            <b>Mimebros	nucleo familiar: {{ beneficiario.miembrosNucleoFamiliar }}</b>
			      <br>
            <b>Hijos menores 5: {{ beneficiario.hijosMenores5 }}</b>
			<br>
            <b>Nivel de estudios: {{ beneficiario.nivelEstudios }}</b>
			<br>
            <b>Ocupacion: {{ beneficiario.ocupacion }}</b>
			<br>
            <b>Tipo de vivienda: {{ beneficiario.tipoVivienda }}</b>
			<br>
            <b>Rural: {{ beneficiario.rural }}</b>
			<br>
            <b>Direccion: {{ beneficiario.direccion }}</b>

			<br>
            <b>Telefono Fijo: {{ beneficiario.telefonoFijo }}</b>
			<br>
            <b>Telefono Celular: {{ beneficiario.telefonoCelular }}</b>
			<br>
            <b>Correo electronico: {{ beneficiario.correoElectronico }}</b>
			<br>
            <b>Estado civil: {{ beneficiario.estadoCivil }}</b>
			<br>
            <b>Información del Conyuge</b>
			<br>
            <b>Tipo de documento del conyuge: {{ beneficiario.tipoDocumentoConyugue }}</b>
			<br>
            <b>Numero de documento del conyuge: {{ beneficiario.numeroDocumentoConyugue }}</b>
			<br>
            <b>Primer apellido del conyuge: {{ beneficiario.primerApellidoConyugue }}</b>
			<br>
            <b>Segundo apellido del conyuge: {{ beneficiario.segundoApellidoConyugue }}</b>
			<br>
            <b>Primer nombre del conyuge: {{ beneficiario.primerNombreConyugue }}</b>
			<br>
            <b>Segundo nombre del conyuge: {{ beneficiario.segundoNombreConyugue }}</b>
			<br>
            <b>Telefono fijo del conyuge: {{ beneficiario.telefonoFijoConyugue }}</b>
			<br>
            <b>Telefono celular del conyuge: {{ beneficiario.telefonoCelularConyugue }}</b>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
   {% endfor %}             
{% endblock %}

