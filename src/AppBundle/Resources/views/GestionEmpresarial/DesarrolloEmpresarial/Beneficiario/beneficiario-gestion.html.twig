{% endblock %}


{% block section %}


<div class="container">
    <h1>Gestión Grupos - Beneficiarios </h1>
    <br>
    {% for grupos in grupo %}
    <h2> Grupo: {{ grupos.nombre }}</h2>
    {% endfor %}
    <hr>
  </div> 
   
 
 <br />
  <br />

    <div class="section" ng-controller="FiltrosBeneficiarioCtrl">
      <div class="container">
        <div class="row" >
          
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('grupoGestion') }}" class="btn btn-warning">Volver</a>
              {% if tipoUsuario == 1 or tipoUsuario == 3 %}
                <a href="{{ path('beneficiarioNuevo', {'idGrupo': idGrupo}) }}" class="btn btn-success">Nuevo</a>              
              {% endif %}
            </div>
          </div>

          <div class="col-md-4">
          </div>

          <div class="col-md-2">
            <div class="btn-group [[styleBuscarHerramientas]]">              
                
                <button class="btn btn-info" ng-click="buttonBuscarHerramientasBeneficiario(CountBuscarHerramientas)">Filtros <span class="caret"></span></button>  
              <button class="btn btn-primary" ng-click="limpiarCamposFiltroBusquedaBeneficiario();">Limpiar</button>                            
            </div>
          </div>

        </div>
      </div>

      <br />

      <div class="container well" ng-show="CountBuscarHerramientas === 1">

        <form method="get" action="{{ path('beneficiarioGestion', {'idGrupo': idGrupo}) }}">               
                  
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

        {{ form_errors(form) }}

        <div class="row">          

            

                  <div class="col-md-3">
                  
                    {{ form_label(form.numero_documento) }}
                    {{ form_errors(form.numero_documento) }}
                    {{ form_widget(form.numero_documento, { 'attr': {'class': 'form-control', 'placeholder': 'Número de documento'} }) }}

                  </div>

                  <div class="col-md-3">

                    {{ form_label(form.primer_apellido) }}
                    {{ form_errors(form.primer_apellido) }}
                    {{ form_widget(form.primer_apellido, { 'attr': {'class': 'form-control', 'placeholder': 'Primer apellido'} }) }}

                  </div>

                  <div class="col-md-3">

                    {{ form_label(form.primer_nombre) }}
                    {{ form_errors(form.primer_nombre) }}
                    {{ form_widget(form.primer_nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Primer nombre'} }) }}

                  </div>

                  <div class="col-md-3">

                    {{ form_label(form.genero) }}
                    {{ form_errors(form.genero) }}
                    {{ form_widget(form.genero, { 'attr': {'class': 'form-control', 'placeholder': 'Género'} }) }}

                  </div>

        </div>

        <br />        

        <div class="row">    

                  <div class="col-md-12 text-right">

                  <button class="btn btn-default" style="color:white; background-color:#ccc;"  type="submit" name="submit-filter" value="filter"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>

                  </div>                  
        </div>

        {{ form_end(form) }}

        </form>

      </div>

    </div>
    <br />               

    
    <br>
    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>
    <div class="section">
      <div class="container">        
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionBeneficiariosCtrl">
              <thead>
                	<tr>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, '#', 'a.id') }}</th>
					          <th class="text-center">{{ knp_pagination_sortable(pagination, 'Documento', 'a.numeroDocumento') }}</th>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Nombre', 'a.nombre') }}</th>
	                  <th class="text-center">{{ knp_pagination_sortable(pagination, 'Rol Familiar', 'a.rolGrupoFamiliar') }}</th>
                    <th class="text-center">{{ knp_pagination_sortable(pagination, 'Acciones', 'a.acciones') }}</th>
	                </tr>
	           </thead>
	           <tbody>
               
          {% set pagina = pagination.getCurrentPageNumber %}
                 
          {% set consecutivo = 1 + ((pagina - 1) * 10) %}
	    	
	    		{% for article in pagination %}
	                <tr {% if loop.index is odd %}class="color"{% endif %}>
                  <tr id="filaBeneficiario{{ consecutivo }}">

                    <td class="text-center">{{ consecutivo }}</td>               
                    <td class="text-center">{{article.numeroDocumento }}</td>
                    <td class="text-center">{{ article.primernombre}} {{ article.segundonombre}} {{ article.primerapellido}}</td>      
                    <td class="text-center">{{article.rolGrupoFamiliar}}</td>

	                  <td class="text-center">


	                    <a href="{{ path('beneficiarioSoporte', {'idGrupo': article.grupo.id, 'idBeneficiario': article.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 

	                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ article.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> |

	                    <a title="Editar" alt="Editar" href="{{ path('beneficiarioEditar',{'idGrupo': article.grupo.id, 'idBeneficiario': article.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

                      {% if tipoUsuario == 1 or tipoUsuario == 3 %}

                        | 

	                      <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarBeneficiario({{article.id}},{{article.grupo.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idBeneficiario = {{article.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        
                      {% endif %}
	                  
                    </td>
	                </tr>
					
	                {% set consecutivo = consecutivo + 1 %}

	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
            <div class="navigation text-center">
              <nav>
                <ul class="pagination">
                  {{ knp_pagination_render(pagination) }}
                </ul>
              </nav>
            </div>   
          </div>
        </div>
      </div>
    </div>  

	{% for beneficiario in pagination %}
