                    <th class="text-center col-md-7">Datos del Grupos</th>                    
                </tr>
              </thead>
            <tbody> 
   
            <tr class="active text-muted">            
                    
                  <td class="text-center">
                    Departamento:
                  </td>         
                  <td class="text-center">
                    {{ grupo.municipio.departamento.nombre }}
                  </td>
              </tr>

            <tr class="active text-muted">             
                  <td class="text-center">
                    Municipio:
                  </td>
                  <td class="text-center">
                    {{ grupo.municipio }}
                  </td>
              </tr>

            <tr class="active text-muted">             
                  <td class="text-center">
                    Zona:
                  </td>
                  <td class="text-center">
                    {{ grupo.municipio.zona.nombre }}
                  </td>
              </tr>
            <tr class="active text-muted">             
                  <td class="text-center">
                    Tipo de grupo:
                  </td>
                  <td class="text-center">
                    {{ grupo.tipo }}
                  </td>
              </tr>
            <tr class="active text-muted">             
                  <td class="text-center">
                    Codigo de grupo:
                  </td>
                  <td class="text-center">
                    {% if grupo.codigo != null %}
                      {{ grupo.codigo }}
                    {% else %}
                      No habilitado
                    {% endif %}
                  </td>
              </tr>

            <tr class="active text-muted">             
                  <td class="text-center">
                    Nombre grupo:
                  </td>
                  <td class="text-center">
                    {{ grupo.nombre }}
                  </td>
              </tr>

            <tr class="active text-muted">             
                  <td class="text-center">
                   Dirección:
                  </td>
                  <td class="text-center">
                    {{ grupo.direccion }}
                  </td>
              </tr>
           
            
            {% if grupo.fechaConstitucionLegal != null %}
              <tr class="active text-muted">             
                  <td class="text-center">
                    NIT:
                  </td>
                  <td class="text-center">
                    {{ grupo.numeroIdentificacionTributaria }}
                  </td>
              </tr>
              {% endif %}
           
           <tr class="active text-muted">             
                  <td class="text-center">
                    Telefono Movil:
                  </td>
                  <td class="text-center">
                    {{ grupo.telefonoCelular }}
                  </td>
              </tr>

            <tr class="active text-muted">             
                  <td class="text-center">
                    Telefono Fijo:
                  </td>
                  <td class="text-center">
                    {{ grupo.telefonoFijo }}
                  </td>
              </tr> 

            {% if grupo.entidadFinancieraCuenta != null %} 
              <tr class="active text-muted">             
                  <td class="text-center">
                    Cuenta Bancaria:
                  </td>
                  <td class="text-center">
                    {{ grupo.entidadFinancieraCuenta }}
                  </td>
              </tr> 
              {% endif %}

             {% if grupo.tipoCuenta != null %} 
              <tr class="active text-muted">             
                  <td class="text-center">
                    Tipo de cuenta:
                  </td>
                  <td class="text-center">
                    {{ grupo.tipoCuenta }}
                  </td>
              </tr>              
              {% endif %}  


              {% if grupo.numeroCuenta != null %} 
              <tr class="active text-muted">             
                  <td class="text-center">
                    Numero de cuenta:
                  </td>
                  <td class="text-center">
                    {{ grupo.numeroCuenta }}
                  </td>
              </tr>  
              {% endif %}              
          </tbody>  
          </table>  
           <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>  
          </div>      
      </div>
    </div>
  </div>
     {% endfor %}

