{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Integrantes{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Empresarial</li>
      <li>Formacion de capital social asociativo y desarrollo empresarial</li>
      <li class="active">Integrantes Comité</li>
    </ul>

{% endblock %}


{% block section %}
<div class="container">
    <h1>Gestión de Integrantes Comité </h1>
    <hr>
  </div>
 
  	<br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('homepage') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('integranteNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>
    <div class="container">
    <div class="alert alert-[[estadoMensaje]] alert-dismissible" id="MensajeCtrl" ng-show="mostrarMensaje === true" role="alert">[[textoMensaje]]<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
    </div>
    <div class="section">
      <div class="container">        
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionIntegranteComiteCtrl">
              <thead>
                	<tr>
	                  <th>#</th>
					           <th>Documento</th>
	                   <th>Nombre</th>
	                   <th>Cargo</th>
	                   <th>Acciones</th>
	                </tr>
	           </thead>
	           <tbody>
               
                {% set consecutivo = 1 %}
	    	
	    		{% for integrante in integrantes %}
	                
	                <tr id="filaIntegrante{{ consecutivo }}">

	                  <td>{{ consecutivo }}</td>
					  <td>{{ integrante.numeroDocumento}}</td>
	                  <td>{{ integrante.primernombre}} {{ integrante.segundonombre}} {{ integrante.primerapellido}} {{ integrante.segundoapellido}}</td>
	                  <td>{{ integrante.cargo }}</td>
	                  <td>


	                    <a href="{{ path('integranteSoporte', {'idIntegrante': integrante.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> | 

	                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal{{ integrante.id }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> |

	                    <a title="Editar" alt="Editar" href="{{ path('integranteEditar', {'idIntegrante': integrante.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>| 

	                   <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarIntegranteComite({{integrante.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idIntegrante = {{integrante.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
	                  
                    </td>
	                </tr>
					
	                {% set consecutivo = consecutivo + 1 %}

	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  

	{% for integrante in integrantes %}
    <!-- Modal -->
  <div class="modal fade" id="myModal{{ integrante.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">{{ integrante.id }} | {{ integrante.primerNombre }} {{ integrante.segundoNombre }} {{ integrante.primerApellido }} {{ integrante.segundoApellido }}</h4>
          </div>
          <div class="modal-body">
            <b>Tipo de documento:{{ integrante.tipoDocumento }}</b>
            <br>
            <b>Numero de documento: {{ integrante.numeroDocumento }}</b>
            <br>
            <b>Primer apellido: {{ integrante.primerApellido }}</b>
            <br>
            <b>Segundo apellido: {{ integrante.segundoApellido }}</b>
            <br>
            <b>Primer nombre: {{ integrante.primerNombre }}</b>
            <br>
            <b>Segundo nombre: {{ integrante.segundoNombre }}</b>
            <br>
            <b>Genero: {{ integrante.genero }}</b>
            <br>
            <b>Fecha de nacimiento: {{ integrante.fechaNacimiento |  date('d - m - Y') }}</b>
            <br>
            <b>Entidad: {{ integrante.entidad }}</b>
            <br>
            <b>Cargo: {{ integrante.cargo }}</b>            
            <br>
            <b>Dirección:  {{ integrante.direccion }}</b>
            <br>
            <b>Telefono fijo: {{ integrante.telefonoFijo }}</b>
            <br>
            <b>Telefono celular: {{ integrante.telefonoCelular }}</b>
            <br>
            <b>Correo electrónico: {{ integrante.correoElectronico }}</b>
            <br>
            <b>Nivel de estudios: {{ integrante.nivelEstudios }}</b>
            <br>
            <b>Pertenencia étnica: {{ integrante.pertenenciaEtnica }}</b>        
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
{% endfor %}      
              
{% endblock %}

