{% extends 'AppBundle::frontend.html.twig' %}


{% block title %}Beneficiarios{% endblock %}

{% block breadcrumb_ul %}

    <ul class="breadcrumb">
      <li><a href="{{ path('homepage') }}">Inicio</a></li>
      <li>Gestión Administrativa</li>
      <li>Plan Operativo Anual - POA</li>
      <li class="active">Gestión POA</li>
    </ul>

{% endblock %}


{% block section %}

     
    <br>

    <hr>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('POANuevo') }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <thead>
                  <tr>
                    <th>#</th>
                    <th>
                      <input type="checkbox">
                    </th>
                    <th>Año</th>
                    <th>Presupuesto</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                  </tr>
             </thead>
             <tbody>
               
                {% set consecutivo = 1 %}
        
                {% for poa in poas %}
                  
                  {% set consecutivo = consecutivo + 1 %}
                  <tr>
                    <td>{{ consecutivo }}</td>
                    <td>
                      <input type="checkbox">
                    </td>
                    <td>{{ poa.anio }}</td>
                    <td>{{ poa.presupuesto }}</td>
                    <td>{{ poa.active }}</td>
                    <td>
                      <a href="{{ path('convocatoriaGestion', {'idPOA': POA.id}) }}" alt="Convocatoria" title="Convocatoria"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> | </a>
                      <a href="acta-subir-grupos.html" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span> | </a>
                      <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> | </a>
                      <a title="Editar" alt="Editar" href="3-grupos-editar.html"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> | </a>
                      <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                  </tr>
                  
                  {% else %}
                  
                  <tr>
                      <td colspan="7" class="info">No se encontraron registros.</td>
                  </tr>
                  
                  {% endfor %}
              
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">NP-RIC-3-2014/05-001 | Andrés Carne de Res</h4>
          </div>
          <div class="modal-body">
            <b>Departamento:Antioquia</b>
            <br>
            <b>Municipio: Rionegro</b>
            <br>
            <b>Zona: Oriente Antioqueño</b>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
               
{% endblock %}

