{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Convocatorias{% endblock %}

{% block breadcrumb_ul %}

  <ul class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Inicio</a></li>
    <li>Gestión Administrativa</li>
    <li>Plan Operativo Anual - POA</li>
    <li><a href="{{ path('POAGestion') }}">Gestión POA</a></li>
    <li class="active">Convocatoria</li>
  </ul>

{% endblock %}


{% block section %}

     
  <br>

  <hr>

  <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('convocatoriaNuevo',{'idPOA': idPOA}) }}" class="btn btn-success">Nuevo</a>
              
              <a class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Eliminar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
	    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                	<tr>
	                  <th>#</th>
	                  <th>
	                    <input type="checkbox">
	                  </th>
	                  <th>Presupuesto</th>
	                  <th>Numero convocatoria</th>
	                  <th>Localización</th>
	                 
	                  <th>Acciones</th>
	                </tr>
	           </thead>
			   <tbody>
               
               {% set consecutivo = 1 %}
	    	
	    		{% for convocatoria in convocatorias %}
	                
	                <tr>
	                  <td>1</td>
	                  <td>
	                    <input type="checkbox">
	                  </td>
	                  <td>{{ convocatoria.poa }}</td>
	                  <td>{{ convocatoria.numero }}</td>
	                  <td>
	                    <b>M</b>Valdivia
	                    <br>
	                    <b>D</b>Antioquia
	                    <br>
	                    <b>Z</b>Zona
	                    <br>
	                  </td>
	                  
	                  <td>
	                   
	                    <a href="acta-subir-grupos.html" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span> | </a>
	                    <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> | </a>
	                    <a title="Editar" alt="Editar" href="3-grupos-editar.html"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> | </a>
	                    <a title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registro?"><span class="glyphicon glyphicon-trash"></span></a>
	                  </td>
	                </tr>
	                
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  
  <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
             
  
{% endblock %}

