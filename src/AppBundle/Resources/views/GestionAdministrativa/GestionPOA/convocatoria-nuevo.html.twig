{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Nueva Convocatoria{% endblock %}

{% block breadcrumb_ul %}

  <ul class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Inicio</a></li>
    <li>Gestión Administrativa</li>
    <li>Plan Operativo Anual - POA</li>
    <li><a href="{{ path('POAGestion') }}">Gestión POA</a></li>
	<li class="active">Convocatoria</li>
    <li class="active">Nuevo</li>
  </ul>

{% endblock %}


{% block section %}

     
  <br>

  <hr>

    
  {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}

    {{ form_errors(form) }}

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="#" onclick="document.forms[0].submit();return false;" class="btn btn-success">Guardar</a>
              
              <a href="{{ path('POAGestion') }}"class="btn btn-danger" title="" alt="Borrar" aria-hidden="true" data-toggle="confirmation" data-btn-ok-label="" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger" data-original-title="¿Eliminar registros?">Cancelar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <!--form class="form-horizontal" role="form"-->

              <div class="form-group">
                <div class="col-sm-12">
                  <div class="danger">{{ form_errors(form) }}</div>
                </div>    
              </div>

              <div class="form-group">
                <div class="col-sm-2">
                  {{ form_label(form.poa) }}
                </div>
                <div class="col-sm-10">
                  {{ form_errors(form.poa) }}
                  {{ form_widget(form.poa, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-2">
                  {{ form_label(form.numero) }}
                </div>
                <div class="col-sm-10">
                  {{ form_errors(form.numero) }}
                  {{ form_widget(form.numero, { 'attr': {'class': 'form-control', 'placeholder': 'numero...'} }) }}
                </div>
              </div>
			  <div class="form-group">
                <div class="col-sm-2">
                  {{ form_label(form.fecha_inicio) }}
                </div>
                <div class="col-sm-10">
                  {{ form_errors(form.fecha_inicio) }}
                  {{ form_widget(form.fecha_inicio, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>
			  <div class="form-group">
                <div class="col-sm-2">
                  {{ form_label(form.fecha_cierre) }}
                </div>
                <div class="col-sm-10">
                  {{ form_errors(form.fecha_cierre) }}
                  {{ form_widget(form.fecha_cierre, { 'attr': {'class': 'form-control'} }) }}
                </div>
              </div>

            <!--/form-->
          </div>
        </div>
      </div>
    </div>

  {{ form_end(form) }}
  
{% endblock %}

