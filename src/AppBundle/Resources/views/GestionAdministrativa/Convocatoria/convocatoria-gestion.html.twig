{% extends 'AppBundle::frontend.html.twig' %}

{% block title %}Convocatorias{% endblock %}

{% block breadcrumb_ul %}

  <ul class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Inicio</a></li>
    <li>Gestión Administrativa</li>
    <li class="active">Convocatoria</li>
  </ul>

{% endblock %}


{% block section %}

<div class="container">
    <h1>Gestión de Convocatorias</h1>
    <hr>
  </div>

  <hr>

  <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="btn-group">
              <a href="{{ path('POAGestion') }}" class="btn btn-warning">Volver</a>
              <a href="{{ path('convocatoriaNuevo') }}" class="btn btn-success">Nuevo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
	    <br>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover" ng-controller="gestionConvocatoriaCtrl">
              <thead>
                	<tr>
	                  <th>#</th>
	                
	                  <th>Presupuesto</th>
	                  <th>Numero convocatoria</th>
	                 
	                 
	                  <th>Acciones</th>
	                </tr>
	           </thead>
			   <tbody>
               
               {% set consecutivo = 1 %}
	    	
	    		{% for convocatoria in convocatoria %}
	                
	                <tr id="filaConvocatoria{{ consecutivo }}">
	              
	                  <td></td>
	                  <td>{{ convocatoria.poa }}</td>
	                  <td>{{ convocatoria.numero }}</td>
	                  
	                  
	                  <td>

	                  <a href="#" alt="Detalle" title="Detalle" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> | </a>
	                   
	                  <a href="{{ path('convocatoriaSoporte', {'idConvocatoria': convocatoria.id}) }}" alt="subir archivos" title="Subir archivos"><span class="glyphicon glyphicon-level-up" aria-hidden="true"></span></a> |
              
                      <a title="Editar" alt="Editar" href="{{ path('convocatoriaEditar', {'idConvocatoria': convocatoria.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |      

                      <a class="ng-binding ng-isolate-scope" href="" mwl-confirm="" alt="Anular" title="Anular registro" message="¿Está seguro de anular este registro?" confirm-text="Si &lt;i class='glyphicon glyphicon-ok'&gt;&lt;/i&gt;" cancel-text="No &lt;i class='glyphicon glyphicon-remove'&gt;&lt;/i&gt;" on-confirm="eliminarConvocatoria({{convocatoria.id}}, {{consecutivo}});" on-cancel="" confirm-button-type="danger" cancel-button-type="default" handle-focus="true" ng-click="idConvocatoria = {{convocatoria.id}};"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                
	                  </td>
	                </tr>
	                
	                {% else %}
	                
	                <tr>
	                  	<td colspan="7" class="info">No se encontraron registros.</td>
	                </tr>
	                
	                {% endfor %}
               </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>  
  <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
             
  
{% endblock %}

