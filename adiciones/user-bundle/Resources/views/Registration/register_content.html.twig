
{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
 
   	<div class="row">
				<div class="col-md-12">
					<fieldset>
						<legend>Registro de usuarios nuevos </legend>
					</fieldset>            
				</div>
			</div>	

   <center>
   	<br>
    <div class="row">    	
            <div class="col-md-4">
            	
              {{ form_label(form.tipo_documento) }}
              {{ form_errors(form.tipo_documento) }}
              {{ form_widget(form.tipo_documento, { 'attr': {'class': 'form-control'} }) }}
            </div>  
            <div class="col-md-4">
              {{ form_label(form.numero_documento) }}
              {{ form_errors(form.numero_documento) }}
              {{ form_widget(form.numero_documento, { 'attr': {'class': 'form-control'} }) }}
            </div>  
            <div class="col-md-4">
              {{ form_label(form.email) }}
              {{ form_errors(form.email) }}
              {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div> 

    </div> 
    <br>
     <div class="row">
            <div class="col-md-4">
              {{ form_label(form.primer_apellido) }}
              {{ form_errors(form.primer_apellido) }}
              {{ form_widget(form.primer_apellido, { 'attr': {'class': 'form-control'} }) }}
            </div>  
            <div class="col-md-4">
              {{ form_label(form.segundo_apellido) }}
              {{ form_errors(form.segundo_apellido) }}
              {{ form_widget(form.segundo_apellido, { 'attr': {'class': 'form-control'} }) }}
            </div> 
            <div class="col-md-4">
              {{ form_label(form.primer_nombre) }}
              {{ form_errors(form.primer_nombre) }}
              {{ form_widget(form.primer_nombre, { 'attr': {'class': 'form-control'} }) }}
            </div>  
    </div>
 <br>
 
    <br>
    <div class="row">
       <div class="col-md-4">
              {{ form_label(form.segundo_nombre) }}
              {{ form_errors(form.segundo_nombre) }}
              {{ form_widget(form.segundo_nombre, { 'attr': {'class': 'form-control'} }) }}
            </div> 
            <div class="col-md-4">
              {{ form_label(form.telefono_fijo) }}
              {{ form_errors(form.telefono_fijo) }}
              {{ form_widget(form.telefono_fijo, { 'attr': {'class': 'form-control'} }) }}
            </div>  
            <div class="col-md-4">
              {{ form_label(form.telefono_celular) }}
              {{ form_errors(form.telefono_celular) }}
              {{ form_widget(form.telefono_celular, { 'attr': {'class': 'form-control'} }) }}
            </div>  
    </div>

    <br>
    <br>

    <div ng-controller="ListasLocalizacionCtrl" ng-init="valoresInicialesLocalizacion(true, 0, 0, 0)">
      
      <div class="row">
        <div class="col-md-4">
            <label>* Departamento</label>
            <select id="selDepartamento" ng-model="selDepartamento" class="form-control" ng-change="cargarZonas()">
            <option ng-repeat="departamento in JSONDepartamento track by departamento.id" ng-selected="[[departamento.id == idDepartamento]]" value="[[departamento.id]]">[[departamento.nombre]]</option>
          </select> 
        </div>
        <div class="col-md-4">
            <label>* Zona</label>
          <select id="selZona" ng-model="selZona" class="form-control" ng-change="cargarMunicipios()">
            <option ng-repeat="zona in JSONZona" ng-selected="[[zona.id == idZona]]" value="[[zona.id]]">[[zona.nombre]]</option>
          </select>
        </div>
          <div class="col-md-4">
             {{ form_label(form.municipio) }}
             {{ form_errors(form.municipio) }}
          <select id="selMunicipio" ng-model="selMunicipio" class="form-control" ng-change="cambiarMunicipio()">
            <option ng-repeat="municipio in JSONMunicipio" ng-selected="[[municipio.id == idMunicipio]]" value="[[municipio.id]]">[[municipio.nombre]]</option>
          </select>
             {{ form_widget(form.municipio, { 
                'attr': {
                  'class': 'form-control selMunicipio',
                'style': 'visibility:hidden'
                } }) }}
          </div>
      </div>  
      </div>  

    <br>
 
    <br>
    <div class="row">
      <div class="col-md-4">
              {{ form_label(form.username) }}
              {{ form_errors(form.username) }}
              {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
            </div> 
            <div class="col-md-4">

              {{ form_label(form.plainPassword.first) }}
              {{ form_errors(form.plainPassword.first) }}
              {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
             
            </div>  
            <div class="col-md-4">

              {{ form_label(form.plainPassword.second) }}
              {{ form_errors(form.plainPassword.second) }}
              {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
             
            </div>  
             
<br>
    

              
    </div>
    <br>
   <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
 
    
</center>
{{ form_end(form) }}











